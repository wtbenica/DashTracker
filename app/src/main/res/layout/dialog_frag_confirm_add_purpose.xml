<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/margin_default">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="?attr/dialogFragCornerRadius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorDialogSecondary"
            android:paddingBottom="@dimen/margin_half">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/new_expense_toolbar"
                style="@style/DialogToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="@string/dialog_title_new_expense_type" />

            <androidx.cardview.widget.CardView
                android:id="@+id/frag_confirm_card"
                style="@style/DialogContentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/new_expense_toolbar">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorDialogContentBg">

                    <TextView
                        android:id="@+id/the_question"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_default"
                        android:text="@string/message_new_expense"
                        android:textColor="?attr/colorDialogText"
                        android:textSize="@dimen/text_size_med"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/dialog_purpose_edit_text"
                        style="@style/FragEntryValueTextView"
                        android:layout_width="0dp"
                        android:layout_marginHorizontal="@dimen/margin_default"
                        android:importantForAutofill="no"
                        android:inputType="text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/the_question" />

                    <View
                        android:id="@+id/divider_hor"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_default"
                        android:background="?attr/colorDialogItemOutline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/dialog_purpose_edit_text" />

                    <Button
                        android:id="@+id/no_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="@string/cancel"
                        android:textColor="?attr/colorDialogText"
                        app:layout_constraintEnd_toStartOf="@id/divider_vert"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider_hor" />

                    <View
                        android:id="@+id/divider_vert"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="?attr/colorDialogItemOutline"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/yes_button_1"
                        app:layout_constraintStart_toEndOf="@id/no_button"
                        app:layout_constraintTop_toBottomOf="@id/divider_hor" />

                    <Button
                        android:id="@+id/yes_button_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:padding="0dp"
                        android:text="@string/save"
                        android:textColor="?attr/colorDialogText"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/divider_vert"
                        app:layout_constraintTop_toBottomOf="@id/divider_hor" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="?attr/listItemCornerRadius"
    tools:showIn="@layout/list_item_entry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            style="@style/DetailsTableTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="?attr/listItemThinBorder">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/PayTableHeaderStyle"
                    android:text="@string/lbl_pay" />

                <TextView
                    style="@style/PayTableHeaderStyle"
                    android:text="@string/lbl_cash_tips" />

                <TextView
                    style="@style/PayTableHeaderStyle"
                    android:text="@string/lbl_other_pay" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/list_item_regular_pay"
                    style="@style/PayTableValueStyle"
                    tools:text="$73.25" />

                <TextView
                    android:id="@+id/list_item_cash_tips"
                    style="@style/PayTableValueStyle"
                    tools:text="$8.00" />

                <TextView
                    android:id="@+id/list_item_other_pay"
                    style="@style/PayTableValueStyle"
                    tools:text="-" />
            </TableRow>
        </TableLayout>

        <GridLayout
            style="@style/DetailsTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4">

            <!-- Row 0 -->
            <TextView
                android:id="@+id/list_item_entry_hours_label"
                style="@style/HeaderStyle"
                android:layout_row="0"
                android:layout_column="0"
                android:text="@string/header_hours" />

            <ImageView
                android:id="@+id/list_item_alert_hours"
                style="@style/ListItemHeaderIncompleteIndicator"
                android:layout_row="0"
                android:layout_column="1"
                android:contentDescription="@string/content_desc_incomplete_entry" />

            <TextView
                android:id="@+id/list_item_entry_hours"
                style="@style/ValueStyle"
                android:layout_row="0"
                android:layout_column="3"
                tools:text="2.93h" />

            <!-- Row 1 -->
            <TextView
                android:id="@+id/list_item_entry_mileage_label"
                style="@style/HeaderStyle"
                android:layout_row="1"
                android:layout_column="0"
                android:text="@string/header_mileage" />

            <ImageView
                android:id="@+id/list_item_alert_miles"
                style="@style/ListItemHeaderIncompleteIndicator"
                android:layout_row="1"
                android:layout_column="1"
                android:contentDescription="@string/content_desc_incomplete_entry" />

            <TextView
                android:id="@+id/list_item_entry_mileage_range"
                style="@style/SecondaryValueStyle"
                android:layout_row="1"
                android:layout_column="2"
                tools:text="203863 - 203904" />

            <TextView
                android:id="@+id/list_item_entry_mileage"
                style="@style/ValueStyle"
                android:layout_row="1"
                android:layout_column="3"
                tools:text="41" />

            <!-- Row 2 -->
            <TextView
                android:id="@+id/list_item_entry_cpm_header"
                style="@style/HeaderStyle"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_column="0"
                android:text="@string/lbl_cost_per_mile"
                android:visibility="invisible"
                tools:layout_height="wrap_content"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/list_item_entry_cpm_deduction_type"
                style="@style/SecondaryValueStyle"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_column="2"
                android:visibility="invisible"
                tools:layout_height="wrap_content"
                tools:text="Gas Only"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/list_item_entry_cpm"
                style="@style/ValueStyle"
                android:layout_height="0dp"
                android:layout_row="2"
                android:layout_column="3"
                android:visibility="invisible"
                tools:layout_height="wrap_content"
                tools:text="$0.18"
                tools:visibility="visible" />

            <!-- Row 3 -->
            <TextView
                android:id="@+id/list_item_entry_expenses_header"
                style="@style/HeaderStyle"
                android:layout_height="0dp"
                android:layout_row="3"
                android:layout_column="0"
                android:text="@string/lbl_net_expenses"
                android:visibility="invisible"
                tools:layout_height="wrap_content"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/list_item_entry_expenses"
                style="@style/ValueStyle"
                android:layout_height="0dp"
                android:layout_row="3"
                android:layout_column="3"
                android:visibility="invisible"
                tools:layout_height="wrap_content"
                tools:text="$56.93"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/list_item_entry_num_deliveries_label"
                style="@style/HeaderStyle"
                android:layout_row="4"
                android:layout_column="0"
                android:text="@string/header_num_deliveries" />

            <ImageView
                android:id="@+id/list_item_alert_deliveries"
                style="@style/ListItemHeaderIncompleteIndicator"
                android:layout_row="4"
                android:layout_column="1"
                android:contentDescription="@string/content_desc_incomplete_entry" />

            <TextView
                android:id="@+id/list_item_entry_num_deliveries"
                style="@style/ValueStyle"
                android:layout_row="4"
                android:layout_column="3"
                tools:text="8" />

            <!-- Row 5 -->
            <TextView
                style="@style/HeaderStyle"
                android:layout_row="5"
                android:layout_column="0"
                android:text="@string/units_pay_rate" />

            <TextView
                android:id="@+id/list_item_entry_hourly"
                style="@style/ValueStyle"
                android:layout_row="5"
                android:layout_column="3"
                tools:text="$22.41" />

            <!-- Row 6 -->
            <TextView
                style="@style/HeaderStyle"
                android:layout_row="6"
                android:layout_column="0"
                android:text="@string/units_avg_delivery" />

            <TextView
                android:id="@+id/list_item_entry_avg_del"
                style="@style/ValueStyle"
                android:layout_row="6"
                android:layout_column="3"
                tools:text="$9.25" />

            <TextView
                style="@style/HeaderStyle"
                android:layout_row="7"
                android:layout_column="0"
                android:text="@string/units_del_per_hr" />

            <TextView
                android:id="@+id/list_item_entry_hourly_dels"
                style="@style/ValueStyle"
                android:layout_row="7"
                android:layout_column="3"
                tools:text="2.38" />
        </GridLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>


    
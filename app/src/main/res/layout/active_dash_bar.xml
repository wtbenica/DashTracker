<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/something_special"
        android:columnCount="4"
        android:padding="@dimen/margin_default"
        android:rowCount="3">

        <!--    Row 0        -->
        <!--    Cols 0 - 1        -->
        <TextView
            style="@style/ActiveDashTextView.Label"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_marginBottom="@dimen/margin_half"
            android:padding="0dp"
            android:paddingStart="@dimen/margin_narrow"
            android:paddingEnd="@dimen/margin_narrow"
            android:text="Current Dash"
            android:textSize="@dimen/text_size_large" />

        <!--    Cols 2 - 3        -->
        <TextView
            android:id="@+id/val_elapsed_time"
            style="@style/ActiveDashTextView.Value"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:padding="0dp"
            android:paddingStart="@dimen/margin_narrow"
            android:paddingEnd="@dimen/margin_narrow"
            android:textSize="@dimen/text_size_large"
            tools:text="4h 20m" />

        <!--    Rows 1 - 2     -->
        <ImageView
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:src="@drawable/dark_outline" />

        <!--    Row 1            -->
        <!--    Col 0            -->
        <TextView
            android:id="@+id/lbl_mileage"
            style="@style/ActiveDashTextView.Label"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginTop="@dimen/margin_half"
            android:text="@string/header_mileage" />

        <!--    Col 1 - 2            -->
        <TextView
            android:id="@+id/val_mileage"
            style="@style/ActiveDashTextView.Value"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_marginTop="@dimen/margin_half"
            tools:text="52.8mi" />

        <!--    Col 3        -->
        <ImageButton
            android:id="@+id/pause_button"
            style="@style/ActiveDashImageButton"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:layout_column="3"
            android:layout_columnWeight="0"
            android:layout_marginStart="@dimen/margin_half"
            android:contentDescription="@string/cont_desc_pause_mileage_tracking"
            android:src="@drawable/anim_pause_to_play" />

        <!--    Row 2       -->
        <!--    Col 0       -->
        <TextView
            android:id="@+id/lbl_cost"
            style="@style/ActiveDashTextView.Label"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginBottom="@dimen/margin_half"
            android:text="@string/lbl_net_expenses" />

        <!--    Col 1 - 2       -->
        <TextView
            android:id="@+id/val_cost"
            style="@style/ActiveDashTextView.Value"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="2"
            tools:text="$14.75" />

    </GridLayout>
</merge>


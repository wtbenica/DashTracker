<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_active_dash_bar"
    android:layout_marginTop="@dimen/margin_default"
    android:columnCount="2"
    android:padding="@dimen/margin_default"
    android:rowCount="3">

    <!--    Row 0        -->
    <TextView
        style="@style/ActiveDashTextView.Label"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_marginBottom="@dimen/margin_half"
        android:padding="0dp"
        android:paddingStart="@dimen/margin_half"
        android:paddingEnd="0dp"
        android:text="Current Dash"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/val_elapsed_time"
        style="@style/ActiveDashTextView.Value"
        android:layout_row="0"
        android:layout_column="1"
        android:padding="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/margin_half"
        android:textSize="@dimen/text_size_large"
        tools:text="4h 20m" />

    <!--    Rows 1 - 2     -->
    <ImageView
        android:layout_row="1"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:src="@drawable/bg_active_dash_bar_details" />

    <!--    Row 1            -->
    <TextView
        android:id="@+id/lbl_mileage"
        style="@style/ActiveDashTextView.Label"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginTop="@dimen/margin_half"
        android:text="@string/header_mileage" />

    <TextView
        android:id="@+id/val_mileage"
        style="@style/ActiveDashTextView.Value"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_marginTop="@dimen/margin_half"
        tools:text="52.8mi" />

    <!--    Row 2       -->
    <TextView
        android:id="@+id/lbl_cost"
        style="@style/ActiveDashTextView.Label"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginBottom="@dimen/margin_half"
        android:text="@string/lbl_net_expenses" />

    <!--    Col 1 - 2       -->
    <TextView
        android:id="@+id/val_cost"
        style="@style/ActiveDashTextView.Value"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginBottom="@dimen/margin_half"
        tools:text="$14.75" />

</GridLayout>

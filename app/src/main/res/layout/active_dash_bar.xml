<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_default"
    android:background="@drawable/bg_active_dash_bar"
    android:columnCount="2"
    android:padding="@dimen/margin_default"
    android:rowCount="4">

    <!--    Row 0        -->
    <TextView
        style="@style/ActiveDashTextView.Label"
        android:layout_row="0"
        android:layout_column="0"
        android:padding="0dp"
        android:paddingStart="@dimen/margin_half"
        android:paddingEnd="0dp"
        android:text="@string/adb_current_dash"
        android:textSize="@dimen/text_size_large" />

    <TextView
        android:id="@+id/val_elapsed_time"
        style="@style/ActiveDashTextView.Value"
        android:layout_row="0"
        android:layout_column="1"
        android:padding="0dp"
        android:paddingStart="0dp"
        android:paddingEnd="@dimen/margin_half"
        android:textSize="@dimen/text_size_large"
        tools:text="4h 20m" />

    <!--    Row 1            -->
    <TextView
        android:id="@+id/lbl_started"
        style="@style/ActiveDashTextView.Value"
        android:layout_row="1"
        android:layout_column="0"
        android:paddingStart="@dimen/margin_half"
        android:paddingEnd="0dp"
        android:textAlignment="textStart"
        tools:text="3:33p - " />

    <!--    Rows 2 - 3     -->
    <ImageView
        android:id="@+id/active_bg"
        android:layout_row="2"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_marginTop="@dimen/margin_half"
        android:src="@drawable/bg_active_dash_bar_details"
        android:contentDescription="@null" />

    <!--    Row 2            -->
    <TextView
        android:id="@+id/lbl_mileage"
        style="@style/ActiveDashTextView.Label"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_marginTop="@dimen/margin_default"
        android:text="@string/header_mileage" />

    <TextView
        android:id="@+id/val_mileage"
        style="@style/ActiveDashTextView.Value"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_marginTop="@dimen/margin_default"
        tools:text="52.8mi" />

    <!--    Row 3       -->
    <TextView
        android:id="@+id/lbl_cost"
        style="@style/ActiveDashTextView.Label"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_marginBottom="@dimen/margin_half"
        android:text="@string/lbl_net_expenses" />

    <TextView
        android:id="@+id/val_cost"
        style="@style/ActiveDashTextView.Value"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_marginBottom="@dimen/margin_half"
        tools:text="$14.75" />

</GridLayout>

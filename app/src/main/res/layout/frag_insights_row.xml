<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.GridLayout"
    tools:keep="@layout/frag_insights_row">


    <TextView
        android:id="@+id/daily_stats_row_day_of_week"
        style="@style/DailyStatsRowDay"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:layout_columnSpan="1"
        tools:text="MON" />

    <TextView
        android:id="@+id/daily_stats_row_label_am"
        style="@style/DailyStatsRowHeader.AM"
        android:layout_row="0"
        android:layout_column="1"
        android:background="@drawable/bg_insight_am_left_corner"
        android:text="@string/ante_meridiem"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/daily_stats_row_am_hourly"
        style="@style/DailyStatsRowValue.AM"
        android:layout_row="0"
        android:layout_column="2"
        tools:text="$19.38" />

    <TextView
        android:id="@+id/daily_stats_row_am_avg_del"
        style="@style/DailyStatsRowValue.AM"
        android:layout_row="0"
        android:layout_column="3"
        tools:text="$9.21" />

    <TextView
        android:id="@+id/daily_stats_row_am_dph"
        style="@style/DailyStatsRowValue.AM"
        android:layout_row="0"
        android:layout_column="4"
        tools:text="2.36" />

    <TextView
        android:id="@+id/daily_stats_row_am_num_shifts"
        style="@style/DailyStatsRowValue.AM"
        android:layout_row="0"
        android:layout_column="5"
        android:background="@drawable/bg_insight_am_right_corner"
        tools:text="4" />

    <TextView
        android:id="@+id/daily_stats_row_label_pm"
        style="@style/DailyStatsRowHeader.PM"
        android:layout_row="1"
        android:layout_column="1"
        android:background="@drawable/bg_insight_pm_left_corner"
        android:text="@string/post_meridiem"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/daily_stats_row_pm_hourly"
        style="@style/DailyStatsRowValue.PM"
        android:layout_row="1"
        android:layout_column="2"
        tools:text="$19.38" />

    <TextView
        android:id="@+id/daily_stats_row_pm_avg_del"
        style="@style/DailyStatsRowValue.PM"
        android:layout_row="1"
        android:layout_column="3"
        tools:text="$9.21" />

    <TextView
        android:id="@+id/daily_stats_row_pm_dph"
        style="@style/DailyStatsRowValue.PM"
        android:layout_row="1"
        android:layout_column="4"
        tools:text="2.36" />

    <TextView
        android:id="@+id/daily_stats_row_pm_num_shifts"
        style="@style/DailyStatsRowValue.PM"
        android:layout_row="1"
        android:layout_column="5"
        android:background="@drawable/bg_insight_pm_right_corner"
        tools:text="2" />
</merge>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/margin_default"
    tools:keep="@layout/dialog_frag_confirm_import">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="?attr/dialogFragCornerRadius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorDialog"
            android:paddingBottom="@dimen/margin_half">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/frag_entry_toolbar"
                style="@style/DialogToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="Confirm Import" />

            <androidx.cardview.widget.CardView
                android:id="@+id/frag_confirm_card"
                style="@style/DialogContentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_entry_toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorDialogContentBg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/the_question"
                        style="@style/ConfirmImportPrimaryTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dialog_text_import" />

                    <LinearLayout
                        style="@style/NotesBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/import_notes_btn"
                            style="@style/ShowNotesButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/modified_info_text"
                            style="@style/NotesStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/dialog_notes_import"
                            android:visibility="visible" />
                    </LinearLayout>

                    <View
                        android:id="@+id/divider_hor"
                        style="@style/Divider.Horizontal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/no_button"
                            style="@style/ConfirmDialogButton"
                            android:text="@string/cancel" />

                        <View
                            android:id="@+id/divider_vert"
                            style="@style/Divider.Vertical" />

                        <Button
                            android:id="@+id/yes_button_1"
                            style="@style/ConfirmDialogButton.Default"
                            android:text="@string/dialog_title_import" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

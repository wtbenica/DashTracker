<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/margin_default">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="?attr/dialogFragCornerRadius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorDialog">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/frag_end_dash_toolbar"
                style="@style/DialogToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="End Dash" />

            <androidx.cardview.widget.CardView
                android:id="@+id/frag_end_dash_table_card"
                style="@style/DialogContentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_end_dash_toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/colorDialogContentBg">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_row="0"
                            android:layout_rowSpan="4"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnSpan="2"
                            android:src="@drawable/bg_end_dash_summary_card" />

                        <TextView
                            android:id="@+id/frag_end_dash_date"
                            style="@style/FragEntryTextView.Header"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textStyle="bold"
                            tools:text="Mon Nov 23, 2021" />

                        <TextView
                            android:id="@+id/frag_end_dash_start_time"
                            style="@style/FragEntryTextView.Value"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_gravity="fill_horizontal"
                            android:textSize="@dimen/text_size_xlarge"
                            tools:text="11:23a" />

                        <!--    Row 2   -->
                        <TextView
                            style="@style/FragEntryTextView.Header"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:labelFor="@id/frag_end_dash_start_mileage"
                            android:text="@string/lbl_start_mileage" />

                        <EditText
                            android:id="@+id/frag_end_dash_start_mileage"
                            style="@style/FragEntryTextView.Value"
                            android:layout_width="0dp"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:layout_gravity="fill_horizontal"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            tools:text="125343" />

                        <!-- Row 3 -->
                        <TextView
                            style="@style/FragEntryTextView.Header"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:labelFor="@id/frag_end_dash_end_mileage"
                            android:text="@string/lbl_tracked_mileage" />

                        <TextView
                            android:id="@+id/frag_end_dash_tracked_mileage"
                            style="@style/FragEntryTextView.Value"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:layout_gravity="fill_horizontal"
                            tools:text="54.0" />
                    </GridLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorPrimary" />

                    <GridLayout
                        android:id="@+id/frag_end_dash_table"
                        style="@style/DialogContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="13"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/frag_end_dash_toolbar">

                        <!--    Row 5   -->
                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_row="5"
                            android:layout_column="0"
                            android:focusable="false"
                            android:labelFor="@id/frag_end_dash_end_time"
                            android:text="@string/lbl_end_time" />

                        <TextView
                            android:id="@+id/frag_end_dash_end_time"
                            style="@style/FragEntryValueTextView"
                            android:layout_row="5"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            tools:text="3:31p" />

                        <!-- Row 6 -->
                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/frag_end_dash_check_ends_next_day"
                            android:layout_row="6"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:buttonTint="?attr/colorDialogItemOutline"
                            android:text="@string/lbl_ends_on_following_day" />

                        <!--    Row 7   -->
                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_row="7"
                            android:layout_column="0"
                            android:focusable="false"
                            android:labelFor="@id/frag_end_dash_end_mileage"
                            android:text="@string/lbl_end_mileage" />

                        <EditText
                            android:id="@+id/frag_end_dash_end_mileage"
                            style="@style/FragEntryValueTextView"
                            android:layout_row="7"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:importantForAutofill="no"
                            android:inputType="number" />

                        <!--    Row 8   -->
                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_row="8"
                            android:layout_column="0"
                            android:focusable="false"
                            android:labelFor="@id/frag_end_dash_end_mileage"
                            android:text="@string/lbl_total_mileage" />

                        <EditText
                            android:id="@+id/frag_end_dash_total_mileage"
                            style="@style/FragEntryValueTextView"
                            android:layout_row="8"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:background="@drawable/bg_edit_text_disabled"
                            android:enabled="false"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal"
                            tools:text="54.0" />

                        <!--    Row 9   -->
                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_row="9"
                            android:layout_column="0"
                            android:focusable="false"
                            android:labelFor="@id/frag_end_dash_pay"
                            android:text="@string/lbl_pay" />

                        <EditText
                            android:id="@+id/frag_end_dash_pay"
                            style="@style/FragEntryValueTextView"
                            android:layout_row="9"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal" />

                        <!--    Row 10   -->
                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_row="10"
                            android:layout_column="0"
                            android:focusable="false"
                            android:labelFor="@id/frag_end_dash_pay"
                            android:text="@string/lbl_other_pay" />

                        <EditText
                            android:id="@+id/frag_end_dash_pay_other"
                            style="@style/FragEntryValueTextView"
                            android:layout_row="10"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal" />

                        <!--    Row 11  -->
                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_row="11"
                            android:layout_column="0"
                            android:focusable="false"
                            android:labelFor="@id/frag_end_dash_cash_tips"
                            android:text="@string/lbl_cash_tips" />

                        <EditText
                            android:id="@+id/frag_end_dash_cash_tips"
                            style="@style/FragEntryValueTextView"
                            android:layout_row="11"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal" />

                        <!--    Row 12  -->
                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_row="12"
                            android:layout_column="0"
                            android:focusable="false"
                            android:labelFor="@id/frag_end_dash_num_deliveries"
                            android:text="@string/lbl_num_deliveries" />

                        <EditText
                            android:id="@+id/frag_end_dash_num_deliveries"
                            style="@style/FragEntryValueTextView"
                            android:layout_row="12"
                            android:layout_column="1"
                            android:layout_columnWeight="1"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            tools:text="7" />
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_end_dash_table_card">

                <ImageButton
                    android:id="@+id/frag_end_dash_btn_delete"
                    style="@style/FragmentEntryImageButton"
                    android:contentDescription="@string/content_desc_delete"
                    android:src="@drawable/ic_action_delete" />

                <ImageButton
                    android:id="@+id/frag_end_dash_btn_cancel"
                    style="@style/FragmentEntryImageButton"
                    android:contentDescription="@string/content_desc_reset"
                    android:src="@drawable/ic_action_reset" />

                <ImageButton
                    android:id="@+id/frag_end_dash_btn_save"
                    style="@style/FragmentEntryImageButton"
                    android:contentDescription="@string/content_desc_save"
                    android:src="@drawable/ic_action_save" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

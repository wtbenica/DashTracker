<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.insight_daily_stats.DailyStatsFragment">

    <GridLayout
        android:id="@+id/daily_stats_fragment_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/daily_stats_fragment_label_hourly"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:text="$/hr"
            android:textAlignment="textEnd"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/daily_stats_fragment_label_avg_del"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:text="$/del"
            android:textAlignment="textEnd"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/daily_stats_fragment_label_dph"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_columnWeight="1"
            android:text="del/hr"
            android:textAlignment="textEnd"
            android:textStyle="bold" />

    </GridLayout>

</LinearLayout>
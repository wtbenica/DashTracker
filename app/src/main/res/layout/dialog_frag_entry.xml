<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/margin_default">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="?attr/dialogFragCornerRadius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorDialog">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/frag_entry_toolbar"
                style="@style/DialogToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="End Dash" />

            <androidx.cardview.widget.CardView
                android:id="@+id/frag_entry_table_card"
                style="@style/DialogContentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_entry_toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_list_item"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/frag_entry_date"
                        style="@style/FragEntryTextView.Header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginEnd="0dp"
                        android:paddingHorizontal="@dimen/margin_default"
                        android:paddingVertical="@dimen/margin_default"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textStyle="bold"
                        tools:text="Mon Nov 23, 2021" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:paddingHorizontal="@dimen/margin_default"
                        android:paddingBottom="@dimen/margin_default"
                        android:rowCount="12">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_row="0"
                            android:layout_rowSpan="3"
                            android:layout_column="0"
                            android:layout_columnSpan="3"
                            android:layout_gravity="fill"
                            android:background="@drawable/bg_grouping_card" />

                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_marginStart="@dimen/margin_default"
                            android:layout_marginTop="@dimen/margin_default"
                            android:layout_marginEnd="0dp"
                            android:labelFor="@id/frag_entry_start_mileage"
                            android:paddingHorizontal="@dimen/margin_default"
                            android:text="@string/lbl_start_time" />

                        <View
                            android:layout_width="@dimen/margin_default"
                            android:layout_height="@dimen/margin_default"
                            android:layout_row="0"
                            android:layout_column="1" />

                        <TextView
                            android:id="@+id/frag_entry_start_time"
                            style="@style/FragEntryValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_marginStart="@dimen/margin_default"
                            tools:text="11:23a" />

                        <!--    Row 5   -->
                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="@dimen/margin_default"
                            android:focusable="false"
                            android:labelFor="@id/frag_entry_end_time"
                            android:paddingHorizontal="@dimen/margin_default"
                            android:text="@string/lbl_end_time" />

                        <TextView
                            android:id="@+id/frag_entry_end_time"
                            style="@style/FragEntryValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="1"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_marginEnd="@dimen/margin_default"
                            tools:text="3:31p" />

                        <!-- Row 2 -->
                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/frag_entry_check_ends_next_day"
                            android:layout_height="@dimen/margin_wide"
                            android:layout_row="2"
                            android:layout_column="2"
                            android:layout_gravity="start"
                            android:layout_marginBottom="@dimen/margin_default"
                            android:buttonTint="?attr/colorDialogItemOutline"
                            android:text="@string/lbl_ends_on_following_day"
                            android:textSize="@dimen/text_size_xs" />

                        <View
                            android:layout_width="@dimen/margin_default"
                            android:layout_height="@dimen/margin_default"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:layout_columnSpan="3" />

                        <!--    Row 3   -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_row="4"
                            android:layout_rowSpan="3"
                            android:layout_column="0"
                            android:layout_columnSpan="3"
                            android:layout_gravity="fill"
                            android:background="@drawable/bg_grouping_card" />

                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_row="4"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_marginStart="@dimen/margin_default"
                            android:layout_marginTop="@dimen/margin_default"
                            android:layout_marginEnd="0dp"
                            android:labelFor="@id/frag_entry_start_mileage"
                            android:paddingHorizontal="@dimen/margin_default"
                            android:text="@string/lbl_start_mileage" />

                        <EditText
                            android:id="@+id/frag_entry_start_mileage"
                            style="@style/FragEntryValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="5"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_marginStart="@dimen/margin_default"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            tools:text="125343" />

                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_row="4"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="@dimen/margin_default"
                            android:focusable="false"
                            android:labelFor="@id/frag_entry_end_mileage"
                            android:paddingHorizontal="@dimen/margin_default"
                            android:text="@string/lbl_end_mileage" />

                        <EditText
                            android:id="@+id/frag_entry_end_mileage"
                            style="@style/FragEntryValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="5"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_marginEnd="@dimen/margin_default"
                            android:importantForAutofill="no"
                            android:inputType="number" />

                        <!--    Row 5   -->
                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_row="6"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_gravity="bottom"
                            android:layout_marginStart="@dimen/margin_default"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="@dimen/margin_default"
                            android:focusable="false"
                            android:labelFor="@id/frag_entry_end_mileage"
                            android:paddingStart="@dimen/margin_default"
                            android:paddingEnd="0dp"
                            android:text="@string/lbl_total_mileage" />

                        <TextView
                            android:id="@+id/frag_entry_total_mileage"
                            style="@style/FragEntryValueTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_row="6"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_gravity="bottom"
                            android:layout_marginEnd="@dimen/margin_default"
                            android:layout_marginBottom="@dimen/margin_default"
                            android:background="@android:color/transparent"
                            android:enabled="false"
                            android:importantForAutofill="no"
                            android:paddingHorizontal="@dimen/margin_default"
                            tools:text="54" />

                        <View
                            android:layout_height="@dimen/margin_default"
                            android:layout_row="7"
                            android:layout_column="0"
                            android:layout_columnSpan="3"
                            android:layout_gravity="fill_horizontal" />

                        <!--    Row 6   -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_row="8"
                            android:layout_rowSpan="4"
                            android:layout_column="0"
                            android:layout_columnSpan="3"
                            android:layout_gravity="fill"
                            android:background="@drawable/bg_grouping_card" />

                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_row="8"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="0dp"
                            android:focusable="false"
                            android:labelFor="@id/frag_entry_pay"
                            android:paddingHorizontal="@dimen/margin_default"
                            android:text="@string/lbl_pay" />

                        <EditText
                            android:id="@+id/frag_entry_pay"
                            style="@style/FragEntryValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="8"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="@dimen/margin_default"
                            android:layout_marginEnd="@dimen/margin_default"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal" />

                        <!--    Row 8   -->
                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_row="9"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_marginEnd="0dp"
                            android:focusable="false"
                            android:labelFor="@id/frag_entry_pay_other"
                            android:paddingHorizontal="@dimen/margin_default"
                            android:text="@string/lbl_other_pay" />

                        <EditText
                            android:id="@+id/frag_entry_pay_other"
                            style="@style/FragEntryValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="9"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_marginEnd="@dimen/margin_default"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal" />

                        <!--    Row 9  -->
                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_row="10"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_marginEnd="0dp"
                            android:focusable="false"
                            android:labelFor="@id/frag_entry_cash_tips"
                            android:paddingHorizontal="@dimen/margin_default"
                            android:text="@string/lbl_cash_tips" />

                        <EditText
                            android:id="@+id/frag_entry_cash_tips"
                            style="@style/FragEntryValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="10"
                            android:layout_column="2"
                            android:layout_columnWeight="1"

                            android:layout_marginEnd="@dimen/margin_default"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal" />

                        <!--    Row 10  -->
                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_row="11"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="@dimen/margin_default"
                            android:focusable="false"
                            android:labelFor="@id/frag_entry_num_deliveries"
                            android:paddingHorizontal="@dimen/margin_default"
                            android:text="@string/lbl_num_deliveries" />

                        <EditText
                            android:id="@+id/frag_entry_num_deliveries"
                            style="@style/FragEntryValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="11"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_marginEnd="@dimen/margin_default"
                            android:layout_marginBottom="@dimen/margin_default"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            tools:text="7" />
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_entry_table_card">

                <ImageButton
                    android:id="@+id/frag_entry_btn_delete"
                    style="@style/FragmentEntryImageButton"
                    android:contentDescription="@string/content_desc_delete"
                    android:src="@drawable/ic_action_delete" />

                <ImageButton
                    android:id="@+id/frag_entry_btn_cancel"
                    style="@style/FragmentEntryImageButton"
                    android:contentDescription="@string/content_desc_reset"
                    android:src="@drawable/ic_action_reset" />

                <ImageButton
                    android:id="@+id/frag_entry_btn_save"
                    style="@style/FragmentEntryImageButton"
                    android:contentDescription="@string/content_desc_save"
                    android:src="@drawable/ic_action_save" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

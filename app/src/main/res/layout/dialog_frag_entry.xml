<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/frag_entry_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/frag_entry_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag_entry_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="?attr/colorOnSecondary"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <GridLayout
        android:id="@+id/frag_entry_table"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:columnCount="3"
        android:padding="8dp"
        android:rowCount="11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_entry_toolbar">

        <!--    Row 0   -->
        <TextView
            style="@style/HeaderBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:focusable="false"
            android:labelFor="@id/frag_entry_date"
            android:text="@string/lbl_date" />

        <TextView
            android:id="@+id/frag_entry_date"
            style="@style/FragmentEntryTextView"
            android:layout_width="0dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:textAlignment="textEnd"
            tools:text="Mon Nov 23, 2021" />

        <!--    Row 1   -->
        <TextView
            style="@style/HeaderBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:focusable="false"
            android:labelFor="@id/frag_entry_start_time"
            android:text="@string/lbl_start_time" />

        <TextView
            android:id="@+id/frag_entry_start_time"
            style="@style/FragmentEntryTextView"
            android:layout_width="0dp"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            tools:text="11:23a" />

        <!--    Row 2   -->
        <TextView
            style="@style/HeaderBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:focusable="false"
            android:labelFor="@id/frag_entry_end_time"
            android:text="@string/lbl_end_time" />

        <TextView
            android:id="@+id/frag_entry_end_time"
            style="@style/FragmentEntryTextView"
            android:layout_width="0dp"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            tools:text="3:31p" />

        <!--    Row 3   -->
        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/frag_entry_check_ends_next_day"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:fontFamily="@font/archivo_black"
            android:text="@string/lbl_ends_on_following_day"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <!--    Row 4   -->
        <RadioButton
            android:id="@+id/frag_entry_calc_mileage_radio"
            android:layout_row="4"
            android:layout_rowSpan="2"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />

        <TextView
            style="@style/HeaderBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="1"
            android:focusable="false"
            android:labelFor="@id/frag_entry_start_mileage"
            android:text="@string/lbl_start_mileage" />

        <EditText
            android:id="@+id/frag_entry_start_mileage"
            style="@style/FragmentEntryTextView"
            android:layout_width="0dp"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:importantForAutofill="no"
            android:inputType="numberDecimal" />

        <!--    Row 5   -->
        <TextView
            style="@style/HeaderBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="5"
            android:layout_column="1"
            android:focusable="false"
            android:labelFor="@id/frag_entry_end_mileage"
            android:text="@string/lbl_end_mileage" />

        <EditText
            android:id="@+id/frag_entry_end_mileage"
            style="@style/FragmentEntryTextView"
            android:layout_width="0dp"
            android:layout_row="5"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:importantForAutofill="no"
            android:inputType="numberDecimal" />

        <!--    Row 6   -->
        <RadioButton
            android:id="@+id/frag_entry_total_mileage_radio"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />

        <TextView
            style="@style/HeaderBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="6"
            android:layout_column="1"
            android:focusable="false"
            android:labelFor="@id/frag_entry_end_mileage"
            android:text="@string/lbl_total_mileage" />

        <EditText
            android:id="@+id/frag_entry_total_mileage"
            style="@style/FragmentEntryTextView"
            android:layout_width="0dp"
            android:layout_row="6"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:importantForAutofill="no"
            android:inputType="numberDecimal" />

        <!--    Row 7   -->
        <TextView
            style="@style/HeaderBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="7"
            android:layout_column="1"
            android:focusable="false"
            android:labelFor="@id/frag_entry_pay"
            android:text="@string/lbl_pay" />

        <EditText
            android:id="@+id/frag_entry_pay"
            style="@style/FragmentEntryTextView"
            android:layout_width="0dp"
            android:layout_row="7"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:importantForAutofill="no"
            android:inputType="numberDecimal" />

        <!--    Row 8   -->
        <TextView
            style="@style/HeaderBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="8"
            android:layout_column="1"
            android:focusable="false"
            android:labelFor="@id/frag_entry_pay"
            android:text="@string/lbl_other_pay" />

        <EditText
            android:id="@+id/frag_entry_pay_other"
            style="@style/FragmentEntryTextView"
            android:layout_width="0dp"
            android:layout_row="8"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:importantForAutofill="no"
            android:inputType="numberDecimal" />

        <!--    Row 9   -->
        <TextView
            style="@style/HeaderBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="9"
            android:layout_column="1"
            android:focusable="false"
            android:labelFor="@id/frag_entry_cash_tips"
            android:text="@string/lbl_cash_tips" />

        <EditText
            android:id="@+id/frag_entry_cash_tips"
            style="@style/FragmentEntryTextView"
            android:layout_width="0dp"
            android:layout_row="9"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:importantForAutofill="no"
            android:inputType="numberDecimal" />

        <!--    Row 10  -->
        <TextView
            style="@style/HeaderBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="10"
            android:layout_column="1"
            android:focusable="false"
            android:labelFor="@id/frag_entry_num_deliveries"
            android:text="@string/label_num_deliveries" />

        <EditText
            android:id="@+id/frag_entry_num_deliveries"
            style="@style/FragmentEntryTextView"
            android:layout_width="0dp"
            android:layout_row="10"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:importantForAutofill="no"
            android:inputType="number"
            tools:text="7" />
    </GridLayout>

    <ImageButton
        android:id="@+id/frag_entry_btn_delete"
        style="@style/FragmentEntryImageButton"
        android:contentDescription="@string/desc_delete_entry"
        android:src="@drawable/delete"
        app:layout_constraintEnd_toStartOf="@id/frag_entry_btn_cancel"
        app:layout_constraintTop_toBottomOf="@id/frag_entry_table" />

    <ImageButton
        android:id="@+id/frag_entry_btn_cancel"
        style="@style/FragmentEntryImageButton"
        android:contentDescription="@string/desc_new_entry"
        android:src="@drawable/reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_entry_table" />
</androidx.constraintlayout.widget.ConstraintLayout>
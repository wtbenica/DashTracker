<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DialogFragmentWrapper">

    <androidx.cardview.widget.CardView style="@style/DialogFragCard">

        <LinearLayout style="@style/DialogFragLayout">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/frag_entry_toolbar"
                style="@style/DialogToolbar"
                tools:title="@string/dialog_title_end_dash" />

            <androidx.cardview.widget.CardView
                android:id="@+id/frag_entry_table_card"
                style="@style/DialogContentCard">

                <LinearLayout
                    style="@style/DialogContent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/frag_entry_date"
                        style="@style/DialogHeaderTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill_horizontal"
                        android:layout_marginEnd="0dp"
                        android:gravity="center_vertical"
                        android:minHeight="@dimen/min_touch_target"
                        android:textSize="@dimen/text_size_xlarge"
                        android:textStyle="bold"
                        tools:text="Mon Nov 23, 2021" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="13">

                        <!-- Row 0 -->
<!--                        <View-->
<!--                            style="@style/DialogContentGroup"-->
<!--                            android:layout_width="0dp"-->
<!--                            android:layout_height="0dp"-->
<!--                            android:layout_row="0"-->
<!--                            android:layout_rowSpan="3"-->
<!--                            android:layout_column="0"-->
<!--                            android:layout_columnSpan="3"-->
<!--                            android:layout_gravity="fill" />-->

                        <TextView
                            style="@style/DialogHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_marginEnd="0dp"
                            android:labelFor="@id/frag_entry_start_mileage"
                            android:paddingHorizontal="@dimen/margin_default"
                            android:text="@string/lbl_start_time" />

                        <!-- THis is the horizontal center gap-->
                        <View
                            android:layout_width="@dimen/margin_default"
                            android:layout_height="0dp"
                            android:layout_row="0"
                            android:layout_column="1" />

                        <TextView
                            android:id="@+id/frag_entry_start_time"
                            style="@style/DialogValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            tools:text="11:23a" />

                        <!--    Row 1   -->
                        <TextView
                            style="@style/DialogHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:focusable="false"
                            android:labelFor="@id/frag_entry_end_time"
                            android:paddingHorizontal="@dimen/margin_default"
                            android:text="@string/lbl_end_time" />

                        <TextView
                            android:id="@+id/frag_entry_end_time"
                            style="@style/DialogValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="1"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            tools:text="3:31p" />

                        <!-- Row 2 -->
                        <androidx.appcompat.widget.AppCompatCheckBox
                            android:id="@+id/frag_entry_check_ends_next_day"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:layout_columnSpan="3"
                            android:layout_gravity="end"
                            android:paddingStart="0dp"
                            android:paddingEnd="@dimen/margin_default"
                            android:text="@string/lbl_ends_on_following_day"
                            android:textColor="?attr/colorDialogButton"
                            android:textSize="@dimen/text_size_sm"
                            app:buttonTint="?attr/colorDialogButton" />

                        <!--    Row 3   -->
<!--                        <View-->
<!--                            android:layout_width="@dimen/margin_default"-->
<!--                            android:layout_height="@dimen/margin_default"-->
<!--                            android:layout_row="3"-->
<!--                            android:layout_column="0"-->
<!--                            android:layout_columnSpan="3" />-->

                        <!-- Row 4 -->
<!--                        <View-->
<!--                            android:layout_width="0dp"-->
<!--                            android:layout_height="0dp"-->
<!--                            android:layout_row="4"-->
<!--                            android:layout_rowSpan="4"-->
<!--                            android:layout_column="0"-->
<!--                            android:layout_columnSpan="3"-->
<!--                            android:layout_gravity="fill"-->
<!--                            android:background="@drawable/bg_grouping_card" />-->

                        <TextView
                            style="@style/DialogHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_row="4"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="@dimen/margin_default"
                            android:layout_marginEnd="0dp"
                            android:labelFor="@id/frag_entry_start_mileage"
                            android:paddingHorizontal="@dimen/margin_default"
                            android:text="@string/lbl_start_mileage" />

                        <TextView
                            style="@style/DialogHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_row="4"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="@dimen/margin_default"
                            android:focusable="false"
                            android:labelFor="@id/frag_entry_end_mileage"
                            android:paddingHorizontal="@dimen/margin_default"
                            android:text="@string/lbl_end_mileage" />

                        <!--Row 5 -->
                        <EditText
                            android:id="@+id/frag_entry_start_mileage"
                            style="@style/DialogValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="5"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            tools:text="125343" />

                        <EditText
                            android:id="@+id/frag_entry_end_mileage"
                            style="@style/DialogValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="5"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:importantForAutofill="no"
                            android:inputType="number" />

                        <!--    Row 6   -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/frag_entry_checkbox_use_tracked_mileage"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/min_touch_target"
                            android:layout_row="6"
                            android:layout_column="0"
                            android:layout_columnSpan="3"
                            android:layout_gravity="end"
                            android:paddingHorizontal="@dimen/margin_default"
                            android:text="@string/lbl_use_tracked_mileage"
                            android:textColor="?attr/colorDialogButton"
                            android:textSize="@dimen/text_size_sm"
                            android:visibility="gone"
                            app:backgroundTint="?attr/colorDialogButtonBg"
                            app:icon="@drawable/ic_swap_24"
                            app:iconTint="?attr/colorDialogButton"
                            app:rippleColor="?attr/colorDialogItemOutline"
                            app:strokeColor="?attr/colorDialogButtonStroke"
                            app:strokeWidth="?attr/dimenDialogButtonStrokeWidth"
                            tools:visibility="visible" />

                        <android.widget.Space
                            android:id="@+id/frag_entry_space"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/margin_default"
                            android:layout_row="6"
                            android:layout_column="0"
                            android:layout_columnSpan="3"
                            android:visibility="gone" />
                        <!--    Row 7   -->
                        <View
                            android:layout_height="0dp"
                            android:layout_row="7"
                            android:layout_rowWeight="1"
                            android:layout_column="0"
                            android:layout_columnSpan="3"
                            android:background="@drawable/dialog_frag_bottom_row_bg" />

                        <TextView
                            style="@style/DialogHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_row="7"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="@dimen/margin_narrow"
                            android:focusable="false"
                            android:labelFor="@id/frag_entry_end_mileage"
                            android:paddingStart="@dimen/margin_default"
                            android:paddingEnd="0dp"
                            android:text="@string/lbl_total_mileage" />

                        <TextView
                            android:id="@+id/frag_entry_total_mileage"
                            style="@style/DialogValueTextView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_row="7"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="@dimen/margin_half"
                            android:background="@android:color/transparent"
                            android:enabled="false"
                            android:importantForAutofill="no"
                            android:paddingHorizontal="@dimen/margin_default"
                            tools:text="54" />

                        <!-- Row 8 -->
                        <View
                            android:layout_height="@dimen/margin_default"
                            android:layout_row="8"
                            android:layout_column="0"
                            android:layout_columnSpan="3"
                            android:layout_gravity="fill_horizontal" />

                        <!--Row 9 -->
<!--                        <View-->
<!--                            android:layout_width="0dp"-->
<!--                            android:layout_height="0dp"-->
<!--                            android:layout_row="9"-->
<!--                            android:layout_rowSpan="4"-->
<!--                            android:layout_column="0"-->
<!--                            android:layout_columnSpan="3"-->
<!--                            android:layout_gravity="fill"-->
<!--                            android:background="@drawable/bg_grouping_card" />-->

                        <TextView
                            style="@style/DialogHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_row="9"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="0dp"
                            android:focusable="false"
                            android:labelFor="@id/frag_entry_pay"
                            android:paddingHorizontal="@dimen/margin_default"
                            android:text="@string/lbl_pay" />

                        <EditText
                            android:id="@+id/frag_entry_pay"
                            style="@style/DialogValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="9"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="@dimen/margin_default"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal" />

                        <!--    Row 10   -->
                        <TextView
                            style="@style/DialogHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_row="10"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_marginEnd="0dp"
                            android:focusable="false"
                            android:labelFor="@id/frag_entry_pay_other"
                            android:paddingHorizontal="@dimen/margin_default"
                            android:text="@string/lbl_other_pay" />

                        <EditText
                            android:id="@+id/frag_entry_pay_other"
                            style="@style/DialogValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="10"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal" />

                        <!--    Row 11  -->
                        <TextView
                            style="@style/DialogHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_row="11"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_marginEnd="0dp"
                            android:focusable="false"
                            android:labelFor="@id/frag_entry_cash_tips"
                            android:paddingHorizontal="@dimen/margin_default"
                            android:text="@string/lbl_cash_tips" />

                        <EditText
                            android:id="@+id/frag_entry_cash_tips"
                            style="@style/DialogValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="11"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal" />

                        <!--    Row 12  -->
                        <TextView
                            style="@style/DialogHeaderTextView"
                            android:layout_width="0dp"
                            android:layout_row="12"
                            android:layout_column="0"
                            android:layout_columnWeight="1"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="@dimen/margin_default"
                            android:focusable="false"
                            android:labelFor="@id/frag_entry_num_deliveries"
                            android:paddingHorizontal="@dimen/margin_default"
                            android:text="@string/lbl_num_deliveries" />

                        <EditText
                            android:id="@+id/frag_entry_num_deliveries"
                            style="@style/DialogValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="12"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            tools:text="7" />
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <include
                android:id="@+id/bottom_button_bar"
                layout="@layout/dialog_list_item_buttons" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorUIBackground"
    android:orientation="vertical"
    tools:showIn="@layout/list_item_yearly">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorListItemExpanded"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/list_item_details_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_list_item"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="0dp">

                    <TableLayout
                        style="@style/PayTable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/PayTableHeaderStyle"
                                android:text="@string/lbl_reported_income" />

                            <TextView
                                style="@style/PayTableHeaderStyle"
                                android:text="@string/lbl_cash_tips" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/list_item_reported_income"
                                style="@style/PayTableValueStyle"
                                tools:text="$2073.25" />

                            <TextView
                                android:id="@+id/list_item_cash_tips"
                                style="@style/PayTableValueStyle"
                                tools:text="$8.00" />
                        </TableRow>
                    </TableLayout>
                </androidx.cardview.widget.CardView>

                <GridLayout
                    style="@style/DetailsTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Row 0 -->
                    <TextView
                        style="@style/HeaderStyle"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:text="@string/header_mileage" />

                    <FrameLayout
                        android:id="@+id/mileage_details_button_frame"
                        style="@style/ExpandDetailsButtonFrame"
                        android:layout_row="0"
                        android:layout_column="1">

                        <ImageButton
                            android:id="@+id/mileage_details_button"
                            style="@style/ExpandDetailsButton"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/content_desc_open_mileage_breakdown" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/list_item_yearly_mileage"
                        style="@style/ValueStyle"
                        android:layout_row="0"
                        android:layout_column="3"
                        tools:text="3,201" />

                    <!-- Row 1 -->
                    <TextView
                        android:id="@+id/list_item_yearly_expenses_header"
                        style="@style/HeaderStyle"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:text="@string/lbl_net_expenses" />

                    <FrameLayout
                        android:id="@+id/list_item_yearly_expense_details_button_frame"
                        style="@style/ExpandDetailsButtonFrame"
                        android:layout_row="1"
                        android:layout_column="1">

                        <ImageView
                            android:id="@+id/list_item_yearly_expense_details_button"
                            style="@style/ExpandDetailsButton"
                            android:contentDescription="@string/content_desc_open_mileage_breakdown" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/list_item_yearly_expenses"
                        style="@style/ValueStyle"
                        android:layout_row="1"
                        android:layout_column="3"
                        tools:text="$56.18" />

                    <!-- Row 2 -->
                    <TextView
                        android:id="@+id/list_item_yearly_cpm_header"
                        style="@style/HeaderStyle"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:text="@string/lbl_cost_per_mile" />

                    <TextView
                        android:id="@+id/list_item_yearly_cpm_deduction_type"
                        style="@style/SecondaryValueStyle"
                        android:layout_row="2"
                        android:layout_column="2"
                        tools:text="Gas Only" />

                    <TextView
                        android:id="@+id/list_item_yearly_cpm"
                        style="@style/ValueStyle"
                        android:layout_row="2"
                        android:layout_column="3"
                        tools:text="$0.18" />

                    <!-- Row 3 -->
                    <TextView
                        style="@style/HeaderStyle"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:text="@string/header_hours" />

                    <TextView
                        android:id="@+id/list_item_yearly_hours"
                        style="@style/ValueStyle"
                        android:layout_row="3"
                        android:layout_column="3"
                        tools:text="2.93h" />


                    <TextView
                        style="@style/HeaderStyle"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:text="@string/units_pay_rate" />

                    <TextView
                        android:id="@+id/list_item_yearly_hourly"
                        style="@style/ValueStyle"
                        android:layout_row="4"
                        android:layout_column="3"
                        tools:text="$22.41" />
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/mileage_breakdown_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half">

            <include layout="@layout/yearly_mileage_grid" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.cardview.widget.CardView>

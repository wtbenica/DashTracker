<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/chart_card_daily_trend"
            style="@style/ChartCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                style="@style/DashTrackerChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.wtb.dashTracker.views.WeeklyBarChart
                    android:id="@+id/chart_line_hourly_trend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_filter_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:cardElevation="0dp">

            <TableLayout
                android:id="@+id/table_filters"
                style="@style/chartTunerTable"
                tools:visibility="visible">

                <TableRow android:layout_marginBottom="@dimen/margin_default">

                    <TextView
                        android:id="@+id/label_num_weeks_hourly_trends"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginEnd="@dimen/margin_half"
                        android:minWidth="75dp"
                        android:text="@string/lbl_num_days"
                        android:textAlignment="gravity" />

                    <LinearLayout
                        android:id="@+id/seek_bar_card_hourly_trend"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_slider"
                        android:gravity="center_vertical"
                        android:minHeight="42dp"
                        android:padding="@dimen/margin_half">

                        <TextView
                            android:id="@+id/num_weeks_hourly_trend"
                            android:layout_width="@dimen/margin_wide"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textAlignment="center"
                            tools:text="41" />

                        <SeekBar
                            android:id="@+id/seek_bar_num_weeks_hourly_trend"
                            style="@style/Widget.AppCompat.SeekBar.Discrete"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="52"
                            android:min="7"
                            android:padding="0dp"
                            android:progress="41"
                            android:progressBackgroundTint="?attr/colorOnPrimaryVariant"
                            android:progressBackgroundTintMode="screen"
                            android:progressTint="?attr/colorSecondaryDark"
                            android:thumb="@drawable/ic_circle"
                            android:thumbTint="?attr/colorSecondaryDark"
                            app:tickMarkTint="@android:color/transparent" />
                    </LinearLayout>
                </TableRow>

                <TableRow android:layout_marginBottom="@dimen/margin_default">

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginEnd="@dimen/margin_half"
                        android:text="Grouping"
                        android:textAlignment="gravity" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/hourly_trend_button_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:checkedButton="@id/hourly_trend_daily"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/hourly_trend_daily"
                            style="@style/MaterialToggleButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/frag_title_daily_list" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/hourly_trend_weekly"
                            style="@style/MaterialToggleButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/frag_title_weekly_list" />

                    </com.google.android.material.button.MaterialButtonToggleGroup>
                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|start"
                        android:layout_marginEnd="@dimen/margin_half"
                        android:text="Expenses"
                        android:textAlignment="gravity" />

                    <com.google.android.material.button.MaterialButtonToggleGroup
                        android:id="@+id/button_group_deduction_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:checkedButton="@id/gas_button"
                        app:selectionRequired="true"
                        app:singleSelection="true">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/gas_button"
                            style="@style/MaterialToggleButton"
                            android:text="@string/expense_purpose_gas" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/actual_button"
                            style="@style/MaterialToggleButton"
                            android:text="@string/expense_purpose_all" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/standard_button"
                            style="@style/MaterialToggleButton"
                            android:text="@string/expense_purpose_standard" />
                    </com.google.android.material.button.MaterialButtonToggleGroup>
                </TableRow>
            </TableLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</merge>


    
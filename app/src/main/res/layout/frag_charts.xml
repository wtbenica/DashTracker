<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:nestedScrollingEnabled="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_dodgeInsetEdges="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            style="@style/CardViewStyle.ListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorPrimaryFaded">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_default">

                <TextView
                    android:id="@+id/chart_cpm_label_tv"
                    style="@style/ListItemHeaderTextView.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cost Per Mile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/chart_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chart_cpm_label_tv">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_line_cpm"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_margin="@dimen/margin_default" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/label_num_weeks_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/margin_wide"
                    android:text="Num Weeks"
                    android:textAlignment="center"
                    app:layout_constraintBottom_toBottomOf="@id/seek_bar_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/seek_bar_card" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/seek_bar_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginTop="@dimen/margin_default"
                    app:cardBackgroundColor="?attr/colorPrimaryVariant"
                    app:layout_constraintCircleRadius="@dimen/margin_default"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/label_num_weeks_tv"
                    app:layout_constraintTop_toBottomOf="@id/chart_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/margin_narrow">

                        <TextView
                            android:id="@+id/num_weeks_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="@dimen/margin_wide"
                            android:text="41"
                            android:textAlignment="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@id/seek_bar_card" />

                        <SeekBar
                            android:id="@+id/seek_bar_num_weeks"
                            style="@style/Widget.AppCompat.SeekBar.Discrete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:max="52"
                            android:min="8"
                            android:progress="41" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/CardViewStyle.ListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorPrimaryFaded">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_default">

                <TextView
                    android:id="@+id/chart_daily_hourly_label_tv"
                    style="@style/ListItemHeaderTextView.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Daily Averages - Hourly"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/chart_card_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chart_daily_hourly_label_tv">

                    <com.github.mikephil.charting.charts.HorizontalBarChart
                        android:id="@+id/chart_bar_daily_hourly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_default"
                        android:minHeight="300dp" />
                </androidx.cardview.widget.CardView>

                <TextView
                    style="@style/ListItemHeaderTextView.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:padding="0dp"
                    android:text="It's something special here"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/chart_card_2" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/DialogFragmentWrapper">

    <androidx.cardview.widget.CardView style="@style/DialogFragCard">

        <LinearLayout style="@style/DialogFragLayout">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/frag_adjust_toolbar"
                style="@style/DialogToolbar"
                app:title="@string/dialog_title_weekly" />

            <androidx.cardview.widget.CardView
                android:id="@+id/frag_adjust_table_card"
                style="@style/DialogContentCard">

                <!-- This is a table instead of grid bc it's easier to hide the adjust row if necessary -->
                <TableLayout
                    android:id="@+id/frag_adjust_table"
                    style="@style/DialogContent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/DialogHeaderTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:labelFor="@id/frag_adjust_date"
                            android:text="@string/lbl_date" />

                        <Spinner
                            android:id="@+id/frag_adjust_date"
                            style="@style/DialogFragSpinnerStyle"
                            android:layout_width="0dp"
                            tools:listitem="@layout/dialog_frag_weekly_spinner_item_single_line" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/frag_adjust_amount_row"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/DialogHeaderTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:labelFor="@id/frag_adjust_amount"
                            android:text="@string/lbl_base_pay_adjust" />

                        <EditText
                            android:id="@+id/frag_adjust_amount"
                            style="@style/DialogValueTextView"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:autofillHints="false"
                            android:inputType="numberDecimal"
                            tools:text="$11.23" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/DialogHeaderTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:labelFor="@id/frag_adjust_total"
                            android:text="@string/lbl_total_earned" />

                        <TextView
                            android:id="@+id/frag_adjust_total"
                            style="@style/DialogValueTextView"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:autofillHints="false"
                            android:background="@drawable/bg_edit_text_disabled"
                            android:enabled="false"
                            tools:text="$11.23" />
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_adjust_table_card">

                <ImageButton
                    android:id="@+id/frag_adjust_btn_dismiss"
                    style="@style/DialogImageButton"
                    android:contentDescription="@string/content_desc_reset"
                    android:src="@drawable/round_close_24" />

                <ImageButton
                    android:id="@+id/frag_adjust_btn_cancel"
                    style="@style/DialogImageButton"
                    android:contentDescription="@string/content_desc_reset"
                    android:src="@drawable/ic_action_reset" />

                <ImageButton
                    android:id="@+id/frag_adjust_btn_save"
                    style="@style/DialogImageButton"
                    android:contentDescription="@string/content_desc_save"
                    android:src="@drawable/ic_action_save" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/dialog_frag_expense">

    <!--    Row 0   -->
    <TextView
        style="@style/FragEntryHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:focusable="false"
        android:labelFor="@id/frag_expense_gas_date"
        android:text="@string/lbl_date" />

    <TextView
        android:id="@+id/frag_expense_gas_date"
        style="@style/FragEntryValueTextView"
        android:layout_width="0dp"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:textAlignment="textEnd"
        tools:text="Mon Nov 23, 2021" />

    <!--    Row 1   -->
    <TextView
        style="@style/FragEntryHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:focusable="false"
        android:labelFor="@id/frag_expense_gas_amount"
        android:text="@string/lbl_amount" />

    <EditText
        android:id="@+id/frag_expense_gas_amount"
        style="@style/FragEntryValueTextView"
        android:layout_width="0dp"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:importantForAutofill="no"
        android:inputType="numberDecimal" />

    <!--    Row 2   -->
    <TextView
        style="@style/FragEntryHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:focusable="false"
        android:labelFor="@id/frag_expense_gas_price"
        android:text="@string/lbl_price" />

    <EditText
        android:id="@+id/frag_expense_gas_price"
        style="@style/FragEntryValueTextView"
        android:layout_width="0dp"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:importantForAutofill="no"
        android:inputType="numberDecimal" />
</GridLayout>
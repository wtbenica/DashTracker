<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_card"
    style="@style/CardViewStyle.ListItem">

    <GridLayout
        android:id="@+id/list_item_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/bg_list_item"
        android:paddingHorizontal="@dimen/margin_default"
        android:paddingVertical="@dimen/margin_half"
        tools:background="@drawable/bg_list_item_expanded">

        <TextView
            android:id="@+id/list_item_title"
            style="@style/ListItemHeaderTextView.Title"
            android:layout_row="0"
            android:layout_column="0"
            tools:text="NOV 21, 2021" />

        <TextView
            android:id="@+id/list_item_subtitle"
            style="@style/ListItemHeaderTextView.Subtitle"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:gravity="bottom"
            android:text="Not Gas" />

        <ImageView
            android:id="@+id/list_item_recurring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:contentDescription="@string/content_desc_recurring_expense"
            android:padding="@dimen/margin_narrow"
            android:src="@drawable/ic_recurring"
            android:visibility="gone"
            app:tint="?attr/colorListItemTitle" />

        <TextView
            android:id="@+id/list_item_title_2"
            style="@style/ListItemHeaderTextView.Title"
            android:layout_width="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:layout_gravity="end"
            android:layout_marginEnd="0dp"
            android:textAlignment="textEnd"
            tools:text="$20.00" />

        <LinearLayout
            android:id="@+id/button_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_gravity="end"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/list_item_btn_delete"
                style="@style/ListItemButton"
                android:contentDescription="@string/content_desc_remove"
                android:elevation="1dp"
                android:src="@drawable/ic_action_delete"/>

            <ImageButton
                android:id="@+id/list_item_btn_edit"
                style="@style/ListItemButton"
                android:contentDescription="@string/content_desc_edit_button"
                android:src="@drawable/ic_action_edit" />

        </LinearLayout>
    </GridLayout>
</androidx.cardview.widget.CardView>
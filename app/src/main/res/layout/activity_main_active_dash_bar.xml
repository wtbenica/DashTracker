<!-- Don't add vertical margins, it messes up the hiding on scroll -->
<com.wtb.dashTracker.views.ExpandableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/active_dash_bar_frame"
    android:layout_width="match_parent"
    tools:background="?attr/colorActiveDashBarBg"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/margin_skinny">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="?attr/activeDashCornerRadius">

        <GridLayout
            android:id="@+id/adb_card_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorActiveDashBarBg"
            android:padding="?attr/listItemThinBorder">

            <LinearLayout
                android:id="@+id/adb_title_row"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:paddingHorizontal="@dimen/margin_wide">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_half"
                    android:layout_weight="1"
                    android:text="@string/adb_current_dash"
                    android:textAlignment="textStart"
                    android:textSize="@dimen/text_size_xlarge" />


                <TextView
                    android:id="@+id/val_elapsed_time"
                    style="@style/ActiveDashTextView.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    tools:text="4h 20m" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_stop_active_dash"
                style="@style/DialogImageButton"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_marginEnd="@dimen/margin_half"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/content_desc_show_chart_filtering_options"
                android:src="@drawable/ic_stop_rounded"
                android:visibility="gone"
                tools:visibility="visible" />

            <LinearLayout
                tools:visibility="gone"
                android:id="@+id/tracking_status_row"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="center_vertical"
                android:backgroundTint="?attr/colorSecondary"
                android:paddingHorizontal="@dimen/margin_wide"
                android:paddingVertical="@dimen/margin_skinny">

                <TextView
                    android:id="@+id/tracking_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_tracking_active"
                    android:textAlignment="textEnd"
                    android:textColor="?attr/colorTextPrimary" />

                <ImageView
                    android:id="@+id/tracking_status_indicator"
                    android:layout_width="@dimen/margin_half"
                    android:layout_height="@dimen/margin_half"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/margin_narrow"
                    android:src="@drawable/tracking_status_indicator" />
            </LinearLayout>

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_narrow"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_columnSpan="2" />

            <com.wtb.dashTracker.views.ExpandableGridLayout
                android:id="@+id/active_dash_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:background="@drawable/bg_active_dash_bar_details"
                android:columnCount="5"
                android:paddingHorizontal="@dimen/margin_skinny"
                android:paddingVertical="@dimen/margin_narrow"
                android:rowCount="6"
                tools:visibility="gone">

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_rowSpan="4"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:background="?attr/colorActiveDashBarStroke" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:layout_row="1"
                    android:layout_rowSpan="4"
                    android:layout_rowWeight="1"
                    android:layout_column="3"
                    android:background="?attr/colorActiveDashBarStroke" />

                <!--    Row 0        -->
                <TextView
                    android:id="@+id/lbl_cpm"
                    style="@style/ActiveDashTextView.Label"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:text="@string/header_cpm" />

                <TextView
                    android:id="@+id/lbl_mileage"
                    style="@style/ActiveDashTextView.Label"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:text="@string/header_mileage" />

                <TextView
                    android:id="@+id/lbl_cost"
                    style="@style/ActiveDashTextView.Label"
                    android:layout_row="2"
                    android:layout_column="4"
                    android:text="@string/lbl_net_expenses" />

                <!-- Row 1 -->
                <TextView
                    android:id="@+id/val_cpm"
                    style="@style/ActiveDashTextView.Value"
                    android:layout_row="3"
                    android:layout_column="0"
                    tools:text="$0.27" />

                <TextView
                    android:id="@+id/val_mileage"
                    style="@style/ActiveDashTextView.Value"
                    android:layout_row="3"
                    android:layout_column="2"
                    tools:text="52.8mi" />

                <!--    Row 3       -->
                <TextView
                    android:id="@+id/val_cost"
                    style="@style/ActiveDashTextView.Value"
                    android:layout_row="3"
                    android:layout_column="4"
                    tools:text="$14.75" />
            </com.wtb.dashTracker.views.ExpandableGridLayout>
        </GridLayout>
    </androidx.cardview.widget.CardView>
</com.wtb.dashTracker.views.ExpandableLinearLayout>

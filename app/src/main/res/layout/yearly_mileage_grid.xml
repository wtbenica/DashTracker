<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical">

        <!--        Row 0 -->
        <TextView
            style="@style/DetailsTableTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_half"
            android:text="@string/header_mileage_breakdown"
            android:textAlignment="center"
            android:textSize="@dimen/text_size_large" />

        <GridLayout
            android:id="@+id/mileage_breakdown_grid"
            style="@style/DetailsTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:paddingTop="@dimen/margin_half">

            <!-- Row 0 -->
            <TextView
                style="@style/HeaderStyle"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:minHeight="0dp"
                android:text="@string/lbl_dates" />

            <TextView
                style="@style/HeaderStyle"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_marginEnd="0dp"
                android:minHeight="0dp"
                android:text="@string/lbl_cpm"
                android:textAlignment="textEnd" />

            <TextView
                style="@style/HeaderStyle"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_marginEnd="0dp"
                android:minHeight="0dp"
                android:text="@string/header_mileage"
                android:textAlignment="textEnd" />

            <com.wtb.dashTracker.ui.fragment_list_item_base.fragment_yearlies.ValueTextView
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:padding="0dp"
                android:text="Hello" />

            <com.wtb.dashTracker.ui.fragment_list_item_base.fragment_yearlies.HeaderTextView
                android:layout_row="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:padding="0dp"
                android:text="Nono"
                android:textAlignment="textEnd" />

            <com.wtb.dashTracker.ui.fragment_list_item_base.fragment_yearlies.ValueTextView
                android:layout_row="1"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:padding="0dp"
                android:text="Hello"
                android:textAlignment="textEnd" />
        </GridLayout>
    </LinearLayout>
</merge>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_mileage_breakdown"
    android:columnCount="4"
    android:padding="@dimen/margin_default"
    android:paddingHorizontal="@dimen/margin_default">

    <TextView
        android:layout_columnSpan="4"
        android:layout_columnWeight="1"
        android:text="Mileage Breakdown"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_large" />

    <TextView
        style="@style/HeaderStyle"
        android:layout_columnWeight=".25"
        tools:text="Dates" />

    <TextView
        style="@style/HeaderStyle"
        android:layout_columnWeight=".25"
        tools:text="@string/header_mileage" />

    <TextView
        style="@style/HeaderStyle"
        android:layout_columnWeight=".25"
        tools:text="@string/lbl_cpm" />

    <TextView
        style="@style/HeaderStyle"
        android:layout_columnWeight=".25"
        android:layout_marginEnd="0dp"
        android:textAlignment="textEnd"
        tools:text="@string/header_mileage" />

    <TextView
        style="@style/ValueStyle"
        android:layout_columnWeight=".25"
        android:textAlignment="textStart"
        android:textSize="@dimen/text_size_med"
        tools:text="Jan 1 - Jun 30" />

    <TextView
        style="@style/HeaderStyle"
        android:layout_columnWeight=".25"
        tools:text="76126-81220" />

    <TextView
        style="@style/HeaderStyle"
        android:layout_columnWeight=".25"
        tools:text="$0.565" />

    <TextView
        style="@style/ValueStyle"
        android:layout_columnWeight=".25"
        android:textSize="@dimen/text_size_med"
        tools:text="5994" />

    <TextView
        style="@style/ValueStyle"
        android:layout_columnWeight=".25"
        android:textAlignment="textStart"
        android:textSize="@dimen/text_size_med"
        android:textStyle="bold"
        tools:text="Jul 1 - Dec 31" />

    <TextView
        style="@style/HeaderStyle"
        android:layout_columnWeight=".25"
        tools:text="81220-90210" />

    <TextView
        style="@style/HeaderStyle"
        android:layout_columnWeight=".25"
        tools:text="$0.585" />

    <TextView
        style="@style/ValueStyle"
        android:layout_columnWeight=".25"
        android:textSize="@dimen/text_size_med"
        tools:text="8990" />
</GridLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/margin_default">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="?attr/dialogFragCornerRadius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorDialog">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/frag_expense_toolbar"
                style="@style/DialogToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="Expense" />

            <androidx.cardview.widget.CardView
                android:id="@+id/frag_expense_table_card"
                style="@style/DialogContentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_expense_toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <GridLayout
                        android:id="@+id/frag_expense_table"
                        style="@style/DialogContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:orientation="vertical"
                        android:rowCount="11">

                        <!--    Row 0   -->
                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:focusable="false"
                            android:labelFor="@id/frag_expense_date"
                            android:text="@string/lbl_date" />

                        <TextView
                            android:id="@+id/frag_expense_date"
                            style="@style/FragEntryValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_columnSpan="2"
                            android:layout_columnWeight="1"
                            android:textAlignment="textEnd"
                            tools:text="Mon Nov 23, 2021" />

                        <!--    Row 1   -->
                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:focusable="false"
                            android:labelFor="@id/frag_expense_purpose"
                            android:text="@string/lbl_purpose" />

                        <Spinner
                            android:id="@+id/frag_expense_purpose"
                            style="@style/DialogFragSpinnerStyle"
                            android:layout_width="0dp"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:layout_columnSpan="2"
                            android:layout_columnWeight="1"
                            tools:listitem="@layout/dialog_frag_expense_purpose_spinner_item" />

                        <!--    Row 2   -->
                        <TextView
                            style="@style/FragEntryHeaderTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="2"
                            android:layout_column="0"
                            android:focusable="false"
                            android:labelFor="@id/frag_expense_amount"
                            android:text="@string/lbl_amount" />

                        <EditText
                            android:id="@+id/frag_expense_amount"
                            style="@style/FragEntryValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="2"
                            android:layout_column="1"
                            android:layout_columnSpan="2"
                            android:layout_columnWeight="1"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal" />

                        <!--    Row 3   -->
                        <TextView
                            android:id="@+id/frag_expense_price_lbl"
                            style="@style/FragEntryHeaderTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:focusable="false"
                            android:labelFor="@id/frag_expense_price"
                            android:text="@string/lbl_price" />

                        <EditText
                            android:id="@+id/frag_expense_price"
                            style="@style/FragEntryValueTextView"
                            android:layout_width="0dp"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:layout_columnSpan="2"
                            android:layout_columnWeight="1"
                            android:importantForAutofill="no"
                            android:inputType="numberDecimal" />
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_expense_table_card">

                <ImageButton
                    android:id="@+id/frag_expense_btn_delete"
                    style="@style/FragmentEntryImageButton"
                    android:contentDescription="@string/content_desc_delete"
                    android:src="@drawable/ic_action_delete" />

                <ImageButton
                    android:id="@+id/frag_expense_btn_reset"
                    style="@style/FragmentEntryImageButton"
                    android:contentDescription="@string/content_desc_reset"
                    android:src="@drawable/ic_action_reset" />


                <ImageButton
                    android:id="@+id/frag_expense_btn_save"
                    style="@style/FragmentEntryImageButton"
                    android:contentDescription="@string/content_desc_save"
                    android:src="@drawable/ic_action_save" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

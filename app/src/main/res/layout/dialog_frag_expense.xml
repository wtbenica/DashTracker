<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/margin_default">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="?attr/dialogFragCornerRadius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorDialog">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/frag_expense_toolbar"
                style="@style/DialogToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="Expense" />

            <androidx.cardview.widget.CardView
                android:id="@+id/frag_expense_table_card"
                style="@style/DialogContentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_expense_toolbar">

                <LinearLayout
                    android:id="@+id/frag_expense_table"
                    style="@style/DialogContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:orientation="vertical"
                    android:rowCount="11">

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/expense_type_tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_default"
                        app:tabIndicatorColor="?attr/colorPrimary"
                        app:tabSelectedTextColor="?attr/colorTextPrimary"
                        app:tabTextColor="?attr/colorTextPrimary">

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_gas" />

                        <com.google.android.material.tabs.TabItem
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/lbl_other" />
                    </com.google.android.material.tabs.TabLayout>

                    <!--    Row 1   -->
                    <ViewFlipper
                        android:id="@+id/expense_view_flipper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include layout="@layout/grid_gas_expense" />

                        <include layout="@layout/grid_other_expense" />
                    </ViewFlipper>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_expense_table_card">

                <ImageButton
                    android:id="@+id/frag_expense_btn_delete"
                    style="@style/FragmentEntryImageButton"
                    android:contentDescription="@string/desc_delete_entry"
                    android:src="@drawable/ic_action_delete" />

                <ImageButton
                    android:id="@+id/frag_expense_btn_cancel"
                    style="@style/FragmentEntryImageButton"
                    android:contentDescription="@string/desc_new_entry"
                    android:src="@drawable/ic_action_reset" />


                <ImageButton
                    android:id="@+id/frag_expense_btn_save"
                    style="@style/FragmentEntryImageButton"
                    android:contentDescription="@string/desc_new_entry"
                    android:src="@drawable/ic_action_save" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/margin_default"
    tools:keep="@layout/dialog_frag_confirm_export">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="?attr/dialogFragCornerRadius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorDialog"
            android:paddingBottom="@dimen/margin_half">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/frag_entry_toolbar"
                style="@style/DialogToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="Confirm Export" />

            <androidx.cardview.widget.CardView
                android:id="@+id/frag_confirm_card"
                style="@style/DialogContentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_entry_toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorDialogContentBg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/the_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:padding="@dimen/margin_default"
                        android:text="@string/dialog_text_export"
                        android:textColor="?attr/colorDialogText"
                        android:textSize="@dimen/text_size_med"
                        android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/export_notes_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_half"
                        android:textColor="?attr/colorDialogText"
                        android:layout_marginBottom="@dimen/margin_default"
                        android:text="@string/confirm_export_notes_lbl"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/text_size_large"
                        app:icon="@drawable/ic_arrow_expand"
                        app:iconTint="?attr/colorDialogText"
                        app:iconGravity="end"
                        app:iconSize="@dimen/margin_wide" />

                    <TextView
                        android:id="@+id/export_notes_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:paddingHorizontal="@dimen/margin_default"
                        android:layout_marginBottom="@dimen/margin_default"
                        android:text="@string/dialog_notes_export"
                        android:textColor="?attr/colorDialogText"
                        android:textSize="@dimen/text_size_med"
                        android:visibility="gone"
                        tools:visibility="visible" />

                    <View
                        android:id="@+id/divider_hor"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?attr/colorDialogItemOutline" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/no_button"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="@string/cancel"
                            android:textColor="?attr/colorDialogText" />

                        <View
                            android:id="@+id/divider_vert"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:background="?attr/colorDialogItemOutline" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/yes_button_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:padding="0dp"
                            android:text="@string/dialog_title_export"
                            android:textColor="?attr/colorDialogText"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

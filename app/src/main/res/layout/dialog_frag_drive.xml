<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/margin_default">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="?attr/dialogFragCornerRadius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorDialog">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/frag_drive_toolbar"
                style="@style/DialogToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="Edit Drive" />

            <androidx.cardview.widget.CardView
                android:id="@+id/frag_drive_table_card"
                style="@style/DialogContentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_drive_toolbar">

                <GridLayout
                    android:id="@+id/frag_drive_table"
                    style="@style/DialogContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/frag_drive_toolbar">

                    <!--    Row 1   -->
                    <TextView
                        style="@style/FragEntryHeaderTextView"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:focusable="false"
                        android:labelFor="@id/frag_drive_start_time"
                        android:text="@string/lbl_start_time" />

                    <TextView
                        android:id="@+id/frag_drive_start_time"
                        style="@style/FragEntryValueTextView"
                        android:layout_row="1"
                        android:layout_column="1"
                        tools:text="11:23a" />

                    <!--    Row 2   -->
                    <TextView
                        style="@style/FragEntryHeaderTextView"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:focusable="false"
                        android:labelFor="@id/frag_drive_end_time"
                        android:text="@string/lbl_end_time" />

                    <TextView
                        android:id="@+id/frag_drive_end_time"
                        style="@style/FragEntryValueTextView"
                        android:layout_row="2"
                        android:layout_column="1"
                        tools:text="3:31p" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/frag_entry_check_ends_next_day"
                        android:layout_row="3"
                        android:layout_column="0"
                        android:layout_columnSpan="2"
                        android:layout_gravity="end"
                        android:buttonTint="?attr/colorDialogItemOutline"
                        android:text="@string/lbl_ends_on_following_day"
                        android:textColor="?attr/colorDialogText" />

                    <!-- Row 4 -->
                    <TextView
                        style="@style/FragEntryHeaderTextView"
                        android:layout_row="4"
                        android:layout_column="0"
                        android:focusable="false"
                        android:labelFor="@id/frag_drive_start_mileage"
                        android:text="@string/lbl_start_mileage" />

                    <EditText
                        android:id="@+id/frag_drive_start_mileage"
                        style="@style/FragEntryValueTextView"
                        android:layout_row="4"
                        android:layout_column="1"
                        android:importantForAutofill="no"
                        android:inputType="number" />

                    <com.google.android.material.tabs.TabLayout
                        android:id="@+id/tabber"
                        android:layout_width="match_parent"
                        android:layout_row="5"
                        android:layout_column="0"
                        android:layout_columnSpan="2"
                        android:background="@android:color/transparent"
                        app:tabIndicatorColor="?attr/colorPrimary"
                        app:tabIndicatorFullWidth="true"
                        app:tabSelectedTextColor="?attr/colorTextPrimary"
                        app:tabTextColor="?attr/colorTextPrimaryDisabled">

                    </com.google.android.material.tabs.TabLayout>

                    <!--    Row 5   -->
                    <TextView
                        android:id="@+id/top_label"
                        style="@style/FragEntryHeaderTextView"
                        android:layout_row="6"
                        android:layout_column="0"
                        android:focusable="false"
                        android:labelFor="@id/frag_drive_top_value"
                        android:text="@string/lbl_end_mileage" />

                    <EditText
                        android:id="@+id/frag_drive_top_value"
                        style="@style/FragEntryValueTextView"
                        android:layout_row="6"
                        android:layout_column="1"
                        android:importantForAutofill="no"
                        android:inputType="number" />

                    <!--    Row 7   -->
                    <TextView
                        android:id="@+id/btm_label"
                        style="@style/FragEntryHeaderTextView"
                        android:layout_row="7"
                        android:layout_column="0"
                        android:focusable="false"
                        android:labelFor="@id/frag_drive_top_value"
                        android:text="@string/lbl_total_mileage" />

                    <TextView
                        android:id="@+id/frag_drive_btm_value"
                        style="@style/FragEntryValueTextView"
                        android:layout_row="7"
                        android:layout_column="1"
                        android:background="@drawable/bg_edit_text_disabled"
                        android:importantForAutofill="no"
                        tools:text="54.0" />
                </GridLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/frag_drive_table_card">

                <ImageButton
                    android:id="@+id/frag_drive_btn_delete"
                    style="@style/FragmentEntryImageButton"
                    android:contentDescription="@string/content_desc_delete"
                    android:src="@drawable/ic_action_delete" />

                <ImageButton
                    android:id="@+id/frag_drive_btn_reset"
                    style="@style/FragmentEntryImageButton"
                    android:contentDescription="@string/content_desc_reset"
                    android:src="@drawable/ic_action_reset" />

                <ImageButton
                    android:id="@+id/frag_drive_btn_save"
                    style="@style/FragmentEntryImageButton"
                    android:contentDescription="@string/content_desc_save"
                    android:src="@drawable/ic_action_save" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

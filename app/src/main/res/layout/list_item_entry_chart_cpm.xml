<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/list_item_chart_cpm">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/ChartCardLayout"
        android:padding="0dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/chart_card_cpm"
            style="@style/ChartCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart_line_cpm"
                style="@style/DashTrackerChart"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_margin="@dimen/margin_default"
                android:padding="@dimen/margin_default" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/label_num_weeks_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/margin_wide"
            android:text="Num Weeks"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@id/seek_bar_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/seek_bar_card" />

        <androidx.cardview.widget.CardView
            android:id="@+id/seek_bar_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default"
            app:cardBackgroundColor="?attr/colorPrimaryVariant"
            app:layout_constraintCircleRadius="@dimen/margin_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/label_num_weeks_tv"
            app:layout_constraintTop_toBottomOf="@id/chart_card_cpm">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_narrow">

                <TextView
                    android:id="@+id/num_weeks_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/margin_wide"
                    android:text="41"
                    android:textAlignment="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/seek_bar_card" />

                <SeekBar
                    android:id="@+id/seek_bar_num_weeks"
                    style="@style/Widget.AppCompat.SeekBar.Discrete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="52"
                    android:min="8"
                    android:progress="41" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>


    
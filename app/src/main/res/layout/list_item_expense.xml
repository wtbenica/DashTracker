<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_card"
    style="@style/CardViewStyle.ListItem">

    <LinearLayout
        android:id="@+id/list_item_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/bg_list_item"
        android:orientation="vertical"
        tools:background="@drawable/bg_list_item_expanded">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/list_item_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/margin_default"
            android:paddingVertical="@dimen/margin_half"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/list_item_title"
                style="@style/ListItemHeaderTextView.Title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="NOV 21, 2021" />

            <TextView
                android:id="@+id/list_item_subtitle"
                style="@style/ListItemHeaderTextView.Subtitle"
                android:text="@string/label_gas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/list_item_title" />

            <ImageView
                android:id="@+id/list_item_recurring"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/content_desc_recurring_expense"
                android:src="@drawable/ic_recurring"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/list_item_title"
                app:tint="?attr/colorListItemTitle" />

            <TextView
                android:id="@+id/list_item_title_2"
                style="@style/ListItemHeaderTextView.Title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/list_item_title"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="$20.00" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/list_item_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:visibility="gone"
            tools:visibility="visible">

            <androidx.cardview.widget.CardView
                android:id="@+id/list_item_details_card"
                android:layout_width="0dp"
                android:layout_marginHorizontal="@dimen/margin_default"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TableLayout
                    style="@style/PayTable.Gas"
                    android:layout_width="match_parent"
                    android:background="?attr/colorPrimaryFaded"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/PayTableHeaderStyle"
                            android:text="@string/label_price" />

                        <TextView
                            style="@style/PayTableHeaderStyle"
                            android:text="@string/label_gallons" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/list_item_price"
                            style="@style/PayTableValueStyle"
                            tools:text="$5.299" />

                        <TextView
                            android:id="@+id/list_item_gallons"
                            style="@style/PayTableValueStyle"
                            tools:text="3.77" />
                    </TableRow>
                </TableLayout>
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/list_item_btn_delete"
                style="@style/ListItemButton"
                android:contentDescription="@string/content_desc_remove"
                android:src="@drawable/ic_action_delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/list_item_btn_edit" />

            <ImageButton
                android:id="@+id/list_item_btn_edit"
                style="@style/ListItemButton"
                android:contentDescription="@string/content_desc_edit_button"
                android:src="@drawable/ic_action_edit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/list_item_details_card" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
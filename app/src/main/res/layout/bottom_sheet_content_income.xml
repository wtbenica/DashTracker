<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:useDefaultMargins="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/bottom_sheet_income_lbl_period" />

    <Space android:layout_width="@dimen/margin_narrow" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/button_group_time_aggregator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginBottom="8dp"
        app:checkedButton="@id/daily_button"
        app:selectionRequired="true"
        app:singleSelection="true"
        tools:showIn="@layout/layout_main_bottom_sheet">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/daily_button"
            style="@style/bottomSheetToggleButton"
            android:text="@string/title_daily" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/weekly_button"
            style="@style/bottomSheetToggleButton"
            android:text="@string/title_weekly_list" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/yearly_button"
            style="@style/bottomSheetToggleButton"
            android:text="@string/title_yearly_list" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="@string/title_expenses" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/button_group_deduction_type"
        android:layout_width="0dp"
        android:layout_column="2"
        android:layout_columnWeight="1"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/gas_button"
            style="@style/bottomSheetToggleButton"
            android:text="@string/expense_purpose_gas" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/actual_button"
            style="@style/bottomSheetToggleButton"
            android:text="@string/expense_purpose_all" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/standard_button"
            style="@style/bottomSheetToggleButton"
            android:enabled="true"
            android:text="@string/expense_purpose_standard" />
    </com.google.android.material.button.MaterialButtonToggleGroup>

</GridLayout>

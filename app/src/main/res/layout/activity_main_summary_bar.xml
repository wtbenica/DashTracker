<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/summary_bar"
    style="@style/SummaryBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:rowCount="3"
    app:layout_scrollFlags="scroll|enterAlways">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/act_main_lbl_hourly"
        style="@style/SummaryBarItem.Header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:text="@string/lbl_hourly" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/act_main_lbl_last_week"
        style="@style/SummaryBarItem.Header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_columnWeight="1"
        android:text="@string/lbl_last_week" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/act_main_lbl_this_week"
        style="@style/SummaryBarItem.Header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:text="@string/lbl_this_week" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/act_main_hourly"
        style="@style/SummaryBarItem.Value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnWeight="1"
        tools:text="$4.25/hr" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/act_main_last_week"
        style="@style/SummaryBarItem.Value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="1"
        tools:text="$209.00" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/act_main_this_week"
        style="@style/SummaryBarItem.Value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        tools:text="$209.00" />

    <com.wtb.dashTracker.views.ActiveDashBar
        android:id="@+id/adb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_columnSpan="3"
        android:visibility="gone"
        tools:visibility="visible" />
</GridLayout>

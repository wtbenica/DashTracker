<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/fab_flyout_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/fab_menu_item_lbl_bg"
        android:elevation="2dp"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="2dp"
        android:textColor="?attr/colorFabIcon"
        tools:text="Add Entry" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_flyout_button_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="32dp"
        app:elevation="2dp"
        app:fabSize="normal"
        android:contentDescription="@string/content_desc_fab_menu_closed"
        app:srcCompat="@drawable/ic_new_adjust"
        app:tint="?attr/colorFabIcon"/>
</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/min_touch_target"
    android:gravity="end"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/edit_purpose_btn"
        android:layout_width="@dimen/min_touch_target"
        android:layout_height="@dimen/min_touch_target"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_action_edit"
        app:tint="?attr/colorTextPrimary"
        android:contentDescription="@string/content_desc_edit_purpose_list" />

    <ImageButton
        android:id="@+id/add_purpose_btn"
        android:layout_width="@dimen/min_touch_target"
        android:layout_height="@dimen/min_touch_target"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_add_circle"
        app:tint="?attr/colorTextPrimary"
        android:contentDescription="@string/content_desc_add_purpose" />

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorUIBackground"
    android:orientation="vertical"
    tools:keep="@layout/activity_main">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="invisible"
        tools:visibility="visible">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$Behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/summary_bar"
                style="@style/SummaryBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|enterAlways">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/act_main_lbl_hourly"
                    style="@style/SummaryBarItem.Header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_hourly"
                    app:layout_constraintEnd_toStartOf="@id/act_main_lbl_last_week"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/act_main_lbl_last_week"
                    style="@style/SummaryBarItem.Header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_last_week"
                    app:layout_constraintEnd_toStartOf="@id/act_main_lbl_this_week"
                    app:layout_constraintStart_toEndOf="@id/act_main_lbl_hourly"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/act_main_lbl_this_week"
                    style="@style/SummaryBarItem.Header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_this_week"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/act_main_lbl_last_week"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/act_main_hourly"
                    style="@style/SummaryBarItem.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/act_main_last_week"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/act_main_lbl_hourly"
                    tools:text="$4.25/hr" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/act_main_last_week"
                    style="@style/SummaryBarItem.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/act_main_this_week"
                    app:layout_constraintStart_toEndOf="@id/act_main_hourly"
                    app:layout_constraintTop_toBottomOf="@id/act_main_lbl_last_week"
                    tools:text="$209.00" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/act_main_this_week"
                    style="@style/SummaryBarItem.Value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/act_main_last_week"
                    app:layout_constraintTop_toBottomOf="@id/act_main_lbl_this_week"
                    tools:text="$209.00" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment_activity_main"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            app:navGraph="@navigation/mobile_navigation" />

        <com.wtb.dashTracker.views.FabMenu
            android:id="@+id/fab"
            style="@style/Widget.Material3.FloatingActionButton.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/content_desc_fab_menu"
            android:src="@drawable/anim_fab_expand"
            android:translationY="-16dp"
            app:layout_anchor="@id/bottom_app_bar"
            app:layout_behavior="com.google.android.material.floatingactionbutton.FloatingActionButton$Behavior"
            app:layout_dodgeInsetEdges="bottom"
            app:tint="?attr/colorFabIcon"
            tools:ignore="ImageContrastCheck" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottom_app_bar"
            style="@style/Widget.Material3.BottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:animateLayoutChanges="true"
            android:backgroundTint="?attr/colorUi"
            android:minHeight="?android:attr/actionBarSize"
            android:paddingStart="0dp"
            android:paddingEnd="96dp"
            app:elevation="1dp"
            app:fabAlignmentMode="end"
            app:fabAnimationMode="scale"
            app:fabCradleMargin="0dp"
            app:fabCradleVerticalOffset="0dp"
            app:fabCradleRoundedCornerRadius="1dp"
            app:hideOnScroll="true"
            app:layout_behavior="com.google.android.material.bottomappbar.BottomAppBar$Behavior">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/nav_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                app:itemActiveIndicatorStyle="@style/BottomNavActiveIndicatorStyle"
                app:itemIconSize="@dimen/margin_wide"
                app:itemIconTint="?attr/colorBottomNavItem"
                app:itemTextColor="?attr/colorBottomNavItemText"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/bottom_nav_menu" />

        </com.google.android.material.bottomappbar.BottomAppBar>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:background="?attr/colorUi"
        android:paddingVertical="4dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2598018805199505/8852659795" />
</LinearLayout>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:backgroundTint="?attr/colorUi"
    tools:behavior_peekHeight="100%"
    tools:layout_gravity="bottom">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_narrow"
        android:layout_marginTop="0dp"
        android:columnCount="3"
        android:useDefaultMargins="true">

        <ImageView
            android:id="@+id/bottom_sheet_handle"
            android:layout_width="@dimen/margin_wide"
            android:layout_height="@dimen/min_touch_target"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/content_desc_drag_handle"
            android:src="@drawable/ic_draggable"
            app:tint="?android:attr/textColor" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/content_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_half"
            android:alpha="0"
            app:strokeColor="?android:attr/textColor">

            <ViewFlipper
                android:id="@+id/bottom_sheet_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_half">

                <include
                    android:id="@+id/content_income"
                    layout="@layout/bottom_sheet_content_income" />

                <include
                    android:id="@+id/content_expense"
                    layout="@layout/bottom_sheet_content_expense" />

                <include
                    android:id="@+id/content_trends"
                    layout="@layout/bottom_sheet_content_trends" />
            </ViewFlipper>
        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>
</com.google.android.material.card.MaterialCardView>
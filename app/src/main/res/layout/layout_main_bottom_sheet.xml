<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    app:cardElevation="8dp"
    tools:behavior_peekHeight="100%"
    tools:cardBackgroundColor="?attr/colorUi"
    tools:layout_gravity="bottom">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_narrow"
        android:layout_marginTop="0dp"
        android:columnCount="3"
        android:useDefaultMargins="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_draggable"
            app:tint="?android:attr/textColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center_vertical"
            android:text="Show" />

        <Space
            android:layout_width="8dp"
            android:layout_row="1"
            android:layout_column="1" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/button_group_nav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_marginBottom="8dp"
            app:checkedButton="@id/income_button"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/income_button"
                style="@style/bottomSheetToggleButton"
                android:text="Income" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/expense_button"
                style="@style/bottomSheetToggleButton"
                android:enabled="true"
                android:text="Expenses" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/trends_button"
                style="@style/bottomSheetToggleButton"
                android:text="Trends" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="3"
            app:strokeColor="?android:attr/textColor">

            <ViewFlipper
                android:id="@+id/bottom_sheet_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/margin_half">

                <include
                    android:id="@+id/content_income"
                    layout="@layout/bottom_sheet_content_income" />

                <include
                    android:id="@+id/content_expense"
                    layout="@layout/bottom_sheet_content_expense" />

                <include
                    android:id="@+id/content_trends"
                    layout="@layout/bottom_sheet_content_trends" />
            </ViewFlipper>
        </com.google.android.material.card.MaterialCardView>

    </GridLayout>
</com.google.android.material.card.MaterialCardView>

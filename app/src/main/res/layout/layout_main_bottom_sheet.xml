<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    app:cardElevation="8dp"
    tools:behavior_peekHeight="100%"
    tools:cardBackgroundColor="?attr/colorUi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/margin_default"
        android:paddingTop="0dp"
        android:paddingBottom="@dimen/margin_default">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_draggable"
            app:tint="?attr/colorOnSecondary" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/button_group_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:checkedButton="@id/income_button"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/income_button"
                style="@style/bottomSheetToggleButton"
                android:text="Income" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/expense_button"
                style="@style/bottomSheetToggleButton"
                android:enabled="true"
                android:text="Expenses" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/trends_button"
                style="@style/bottomSheetToggleButton"
                android:text="Trends" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/button_group_time_aggregator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            app:checkedButton="@id/daily_button"
            app:selectionRequired="true"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/daily_button"
                style="@style/bottomSheetToggleButton"
                android:text="@string/title_daily" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/weekly_button"
                style="@style/bottomSheetToggleButton"
                android:text="@string/title_weekly_list" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/yearly_button"
                style="@style/bottomSheetToggleButton"
                android:text="@string/title_yearly_list" />
        </com.google.android.material.button.MaterialButtonToggleGroup>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

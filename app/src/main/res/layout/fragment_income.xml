<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment_income.IncomeFragment">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?attr/colorTabIndicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/frag_income_tab_layout"
        style="@style/FragIncomeTabLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/filter_btn"
        app:layout_constraintHorizontal_weight=".75"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag_title_daily_list" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag_title_weekly_list" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/frag_title_yearly_list" />
    </com.google.android.material.tabs.TabLayout>

    <View
        android:id="@+id/divider_3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/colorTabIndicator"
        android:elevation="1dp"
        app:layout_constraintEnd_toEndOf="@id/frag_income_tab_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_income_tab_layout" />

    <View
        android:id="@+id/divider_4"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="?attr/colorTabIndicator"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@id/frag_income_tab_layout"
        app:layout_constraintEnd_toEndOf="@id/frag_income_tab_layout"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/filter_btn"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/min_touch_target"
        android:contentDescription="@string/content_desc_expand_item_list_options_button"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minWidth="@dimen/min_touch_target"
        android:text="@string/lbl_cpm"
        android:textColor="?attr/colorTextPrimary"
        app:backgroundTint="?attr/colorOptionsMenu"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_arrow_expand"
        app:iconTint="?attr/colorTextPrimary"
        app:layout_constraintBottom_toBottomOf="@id/frag_income_tab_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight=".25"
        app:layout_constraintStart_toEndOf="@id/frag_income_tab_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="?attr/colorGroupStroke" />

    <LinearLayout
        android:id="@+id/filter_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorOptionsMenu"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/frag_income_tab_layout">

        <LinearLayout
            android:id="@+id/filter_box_collapsable_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/margin_default"
            android:paddingVertical="@dimen/margin_default"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/button_group_deduction_type"
                android:paddingStart="@dimen/margin_default"
                android:text="@string/lbl_set_cpm_method" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/button_group_deduction_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:checkedButton="@id/none_button"
                app:selectionRequired="true"
                app:singleSelection="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/none_button"
                    style="@style/MaterialToggleButton"
                    android:text="@string/lbl_none" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/gas_button"
                    style="@style/MaterialToggleButton"
                    android:text="@string/expense_purpose_gas" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/actual_button"
                    style="@style/MaterialToggleButton"
                    android:text="@string/expense_purpose_all" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/standard_button"
                    style="@style/MaterialToggleButton"
                    android:text="@string/expense_purpose_standard" />
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </LinearLayout>

        <View
            android:id="@+id/divider_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorTabIndicator" />
    </LinearLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/frag_income_view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?attr/colorUIBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_box" />
</androidx.constraintlayout.widget.ConstraintLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/margin_default"
    tools:keep="@layout/dialog_frag_confirm_edit_purposes">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="?attr/dialogFragCornerRadius">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorDialogSecondary"
            android:paddingBottom="@dimen/margin_half">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/new_expense_toolbar"
                style="@style/DialogToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:title="Expense breakdown" />

            <androidx.cardview.widget.CardView
                android:id="@+id/frag_confirm_card"
                style="@style/DialogContentCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/new_expense_toolbar">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorUIBackground">

                    <androidx.compose.ui.platform.ComposeView
                        android:id="@+id/expense_breakdown_table"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_height="100dp" />

                    <TextView
                        android:id="@+id/explanation"
                        app:layout_constraintTop_toBottomOf="@id/expense_breakdown_table"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_width="match_parent"
                        android:paddingHorizontal="@dimen/margin_default"
                        android:paddingVertical="@dimen/margin_half"
                        android:layout_height="wrap_content"
                        android:text="@string/business_expense_explanation" />

                    <View
                        android:id="@+id/divider_hor"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="?attr/colorDialogItemOutline"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/explanation" />

                    <ImageButton
                        android:id="@+id/no_button"
                        style="@style/ConfirmDialogButton.Default"
                        android:src="@drawable/round_close_24"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider_hor"
                        app:tint="?attr/colorDialogButtonIcon" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

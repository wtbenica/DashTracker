<resources>

    <style name="Widget.ChartCard" parent="CardViewStyle.ListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">?attr/colorPrimaryFaded</item>
        <item name="cardCornerRadius">?attr/defaultCornerRadius</item>
    </style>

    <style name="ChartCardDetailsLayout">
        <item name="android:background">?attr/colorOnSecondary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="ChartCardTitle" parent="ListItemHeaderTextView.Title">

    </style>

    <style name="ChartCard" parent="CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">?attr/defaultCornerRadius</item>
    </style>

    <style name="chartTunerTable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorOptionsMenu</item>
        <item name="android:padding">@dimen/margin_default</item>
        <item name="android:visibility">gone</item>
        <item name="android:columnCount">2</item>
    </style>

    <style name="DashTrackerChart">
        <item name="android:background">?attr/colorListItemDetails</item>
        <item name="android:padding">@dimen/margin_default</item>
    </style>
</resources>
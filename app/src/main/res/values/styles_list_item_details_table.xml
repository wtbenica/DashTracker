<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_narrow</item>
        <item name="android:textSize">?attr/textSizeItemHeader</item>
        <item name="android:textColor">?attr/colorRowHeaderText</item>
    </style>

    <style name="ValueStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">?attr/textSizeItemValue</item>
        <item name="android:textColor">?attr/colorRowValueText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="SecondaryValueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">?attr/textSizeItemSecondaryValue</item>
        <item name="android:textColor">?attr/colorRowValueSecondaryText</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PayTable">
        <item name="android:background">@drawable/list_item_pay_table_background</item>
        <item name="android:paddingHorizontal">@dimen/margin_narrow</item>
        <item name="android:paddingVertical">@dimen/margin_half</item>
    </style>

    <style name="PayTableHeaderStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">?attr/textSizeItemHeader</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorRowHeaderPayText</item>
    </style>

    <style name="PayTableValueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">?attr/textSizeItemValue</item>
        <item name="android:textColor">?attr/colorRowValuePayText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DetailsTable">
        <item name="android:paddingVertical">@dimen/margin_default</item>
        <item name="android:paddingHorizontal">@dimen/margin_wide</item>
    </style>

    <style name="DetailsRow">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingVertical">@dimen/margin_narrow</item>
    </style>
</resources>
<resources>

    <style name="HeaderStyle" parent="Widget.AppCompat.TextView">
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/margin_narrow</item>
        <item name="android:textSize">?attr/textSizeItemHeader</item>
        <item name="android:textColor">?attr/colorRowHeaderText</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="ValueStyle" parent="Widget.AppCompat.TextView">
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">?attr/textSizeItemValue</item>
        <item name="android:textColor">?attr/colorRowValueText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:gravity">bottom|end</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="SecondaryValueStyle">
        <item name="android:layout_columnWeight">1</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">?attr/textSizeItemSecondaryValue</item>
        <item name="android:textColor">?attr/colorRowValueSecondaryText</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="DetailsTable">
        <item name="android:background">@drawable/bg_list_item_details_table</item>
        <item name="android:paddingBottom">@dimen/margin_default</item>
        <item name="android:paddingHorizontal">@dimen/margin_wide</item>
    </style>

    <style name="DetailsTableTop">
        <item name="android:background">@drawable/bg_list_item_subtable</item>
        <item name="android:paddingHorizontal">@dimen/margin_narrow</item>
        <item name="android:paddingTop">@dimen/margin_half</item>
        <item name="android:paddingBottom">@dimen/margin_default</item>
    </style>

    <style name="DetailsTable.Gas">
        <item name="android:paddingTop">@dimen/margin_default</item>
        <item name="android:background">@drawable/bg_list_item_subtable_full</item>
    </style>

    <style name="PayTableHeaderStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">?attr/textSizeItemHeader</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorRowHeaderPayText</item>
    </style>

    <style name="PayTableValueStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">?attr/textSizeItemValue</item>
        <item name="android:textColor">?attr/colorRowValuePayText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ExpandDetailsButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center_horizontal</item>
        <item name="tint">?attr/colorListItemButtonIcon</item>
        <item name="android:src">@drawable/baseline_open_in_new_24</item>
    </style>

    <style name="ExpandDetailsButtonFrame">
        <item name="android:layout_height">@dimen/min_touch_target</item>
        <item name="android:layout_width">@dimen/min_touch_target</item>
    </style>
</resources>
<resources>

    <style name="CardViewStyle.ListItem">
        <item name="android:background">?attr/colorListItem</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">0dp</item>
        <item name="android:layout_marginVertical">1dp</item>
        <item name="android:minHeight">@dimen/min_touch_target</item>
    </style>

    <style name="ListItemHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/margin_default</item>
    </style>

    <style name="ListItemHeaderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="ListItemHeaderTextView.Title">
        <item name="android:textSize">?attr/textSizeListItemTitle</item>
        <item name="android:textColor">?attr/colorListItemTitle</item>
    </style>

    <style name="ListItemHeaderTextView.Subtitle">
        <item name="android:textSize">?attr/textSizeListItemSubtitle</item>
        <item name="android:textColor">?attr/colorListItemSubtitle</item>
    </style>

    <style name="ListItemHeaderIncompleteIndicator">
        <item name="android:layout_width">@dimen/margin_half</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@drawable/ic_circle</item>
        <item name="android:tint">@color/alert</item>
    </style>

    <style name="ListItemButton">
        <item name="android:layout_height">@dimen/min_touch_target</item>
        <item name="android:layout_width">@dimen/min_touch_target</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">?attr/colorListItemTitle</item>
        <item name="android:padding">@dimen/margin_narrow</item>
    </style>

    <style name="listItemDetailsPane">
        <item name="android:visibility">gone</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingBottom">?attr/listItemThinBorder</item>
        <item name="android:paddingStart">?attr/listItemThinBorder</item>
    </style>
</resources>
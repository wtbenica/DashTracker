<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">?attr/colorOverflowMenuButton</item>
    </style>

    <style name="SummaryBar">
        <item name="android:background">?attr/colorToolbar</item>
        <item name="android:elevation">1dp</item>
        <item name="android:padding">@dimen/margin_narrow</item>
    </style>

    <style name="SummaryBarItem" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorSummaryBarItemText</item>
    </style>

    <style name="SummaryBarItem.Header">

    </style>

    <style name="SummaryBarItem.Value">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
    </style>

    <style name="OverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popup_background</item>
        <item name="android:textAppearance">@style/TrackerOverflowMenuText</item>
    </style>

    <style name="TrackerOverflowMenuText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">?attr/colorOverflowMenuText</item>
    </style>

    <style name="TrackerWidgetTheme">
        <item name="android:textColor">?attr/colorOverflowMenuText</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SummaryBar">
        <item name="android:background">?attr/colorToolbar</item>
        <item name="android:elevation">1dp</item>
        <item name="android:padding">@dimen/margin_narrow</item>
    </style>

    <style name="SummaryBarItem" parent="Widget.AppCompat.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SummaryBarItem.Header">
    </style>

    <style name="SummaryBarItem.Value">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Base.Widget.AppCompat.ActionButton.Overflow.Tracker">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name="Widget.AppCompat.PopupMenu.Overflow.Tracker">
        <item name="android:popupBackground">@drawable/overflow_bg</item>
    </style>
</resources>
<resources>
    <style name="ActionBarOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">?attr/colorOverflowMenuButton</item>
    </style>

    <style name="ActionBarOverflowMenuStyle" parent="Widget.Material3.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/bg_popup_menu</item>
        <item name="android:textAppearance">@style/ActionBarOverflowMenuTextAppearance</item>
    </style>

    <style name="ActionBarOverflowMenuTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">?attr/colorOverflowMenuText</item>
    </style>

    <style name="SummaryBar">
        <item name="android:background">?attr/colorToolbar</item>
        <item name="android:elevation">1dp</item>
        <item name="android:paddingVertical">@dimen/margin_half</item>
        <item name="android:paddingHorizontal">@dimen/margin_narrow</item>
    </style>

    <style name="SummaryBarItem" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">?attr/colorSummaryBarItemText</item>
    </style>

    <style name="SummaryBarItem.Header">
        <item name="android:textSize">?attr/textSizeSummaryBarHeader</item>
    </style>

    <style name="SummaryBarItem.Value">
        <item name="android:textSize">?attr/textSizeSummaryBarValue</item>
    </style>

    <style name="WidgetTheme">
        <item name="android:textColor">?attr/colorOverflowMenuText</item>
    </style>

    <style name="BottomNavItemTextAppearance">

    </style>

    <style name="BottomNavItemTextAppearance.Active">
        <item name="android:textSize">?attr/textSizeBottomNavActive</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="BottomNavItemTextAppearance.Inactive">
        <item name="android:textSize">?attr/textSizeBottomNavInactive</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="BottomNavActiveIndicatorStyle" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/colorBottomNavItemIndicator</item>
    </style>
    
    <style name="bottomSheet" parent="Widget.Material3.CardView.Elevated">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceBottomSheet</item>
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">?attr/colorUi</item>
        <item name="behavior_peekHeight">@dimen/min_touch_target</item>
        <item name="layout_behavior">@string/bottom_sheet_behavior</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
    
    <style name="bottomSheetToggleButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/nav_button</item>
        <item name="strokeColor">@color/nav_button_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>
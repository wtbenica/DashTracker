<resources>

    <style name="FragEntryHeaderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">?attr/textSizeItemHeader</item>
        <item name="android:textColor">?attr/colorDialogText</item>
        <item name="android:layout_columnWeight">0.3</item>
    </style>

    <style name="FragEntryValueTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">@dimen/min_touch_target</item>
        <item name="android:layout_marginTop">@dimen/margin_narrow</item>
        <item name="android:layout_marginBottom">@dimen/margin_narrow</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_columnWeight">0.7</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textSize">?attr/textSizeItemValue</item>
        <item name="android:textColor">?attr/colorDialogText</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="FragEntryTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:textSize">?attr/textSizeItemHeader</item>
        <item name="android:textColor">?attr/colorDialogText</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FragEntryTextView.Header">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_columnWeight">.3</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="FragEntryTextView.Value">
        <item name="android:layout_columnWeight">.7</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">?attr/textSizeItemValue</item>
        <item name="android:background">@drawable/outline</item>
    </style>

    <style name="DialogFragSpinnerStyle">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/margin_narrow</item>
        <item name="android:layout_marginBottom">@dimen/margin_narrow</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">?attr/colorDialogText</item>
        <item name="android:popupBackground">@drawable/bg_dialog_frag_popup_menu</item>
        <item name="android:dropDownSelector">?attr/colorOnPrimary</item>
    </style>

    <style name="FragmentEntryImageButton">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:layout_height">@dimen/min_touch_target</item>
        <item name="android:layout_width">@dimen/min_touch_target</item>
        <item name="android:tint">?attr/colorDialogButtonIcon</item>
    </style>
</resources>
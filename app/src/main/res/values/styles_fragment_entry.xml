<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FragmentEntryTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="FragmentEntryImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/background_image_button</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
    </style>

    <style name="FragmentEntryCardView" parent="Base.CardView">
        <item name="cardElevation">0dp</item>
    </style>
</resources>
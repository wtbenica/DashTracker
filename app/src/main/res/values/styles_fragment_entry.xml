<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FragmentEntryTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:layout_marginTop">@dimen/margin_narrow</item>
        <item name="android:layout_marginBottom">@dimen/margin_narrow</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="FragmentEntryImageButton">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

</resources>
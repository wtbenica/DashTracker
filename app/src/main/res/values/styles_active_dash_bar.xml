<resources>
    <style name="ActiveDashTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ActiveDashTextView.Label">
        <item name="android:layout_columnWeight">0.25</item>
    </style>

    <style name="ActiveDashTextView.Value">
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="ActiveDashImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/min_touch_target</item>
        <item name="android:layout_height">@dimen/min_touch_target</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="tint">?attr/colorPrimaryDark</item>
<!--        <item name="android:layout_margin">4dp</item>-->
    </style>
</resources>
<resources>
    <!-- Splash screen theme -->
    <style name="SplashScreenBase" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/icon_c_foreground</item>
        <item name="postSplashScreenTheme">@style/Base.DasherCompanion</item>
    </style>

    <style name="SplashScreen" parent="SplashScreenBase">
        <item name="colorOnSecondary">@color/on_brick</item>
    </style>

    <!-- Licenses Activities Theme -->
    <style name="LicensesActivitiesBase" parent="Theme.Material3.DayNight">
        <item name="actionBarStyle">@style/DTActionBarStyle</item>
        <item name="colorUi">@color/faded</item>
        <item name="textSizeActionBarTitle">@dimen/text_size_xxl</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="titleFontFamily">@font/oswald</item>
        <item name="android:statusBarColor">?attr/colorUi</item>
    </style>

    <style name="LicensesActivitiesTheme" parent="LicensesActivitiesBase">
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorActionBarText">@color/on_regular</item>
    </style>

    <style name="SettingsActivityTheme" parent="Base.DasherCompanion">
        <item name="android:textColorSecondary">?attr/colorTextPrimaryDisabled</item>
    </style>

    <!-- Base application theme. -->
    <style name="Base" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorPrimary">@color/regular</item>
        <item name="colorPrimaryVariant">@color/light</item>
        <item name="colorPrimaryFaded">@color/faded</item>
        <item name="colorOnPrimary">@color/on_regular</item>
        <item name="colorOnPrimaryVariant">@color/on_regular_light</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brick</item>
        <item name="colorSecondaryVariant">@color/brick_light</item>
        <item name="colorSecondaryDark">@color/brick_dark</item>
        <item name="colorSecondaryFaded">@color/brick_faded</item>
        <item name="colorOnSecondary">@color/on_brick</item>
        <item name="colorOnSecondaryVariant">@color/on_brick_light</item>

        <item name="colorAccent">@color/accent</item>
        <item name="colorAlert">@color/alert</item>

        <item name="defaultCornerRadius">@dimen/margin_default</item>

<!--        <item name="android:windowActionBarOverlay">true</item>-->
<!--        <item name="windowActionBarOverlay">true</item>-->

        <!-- View Styles -->
        <item name="android:actionBarWidgetTheme">@style/WidgetTheme</item>
        <item name="actionBarStyle">@style/DTActionBarStyle</item>
        <item name="actionOverflowButtonStyle">@style/ActionBarOverflowButtonStyle</item>
        <item name="cardViewStyle">@style/DTCardViewStyle</item>
        <item name="actionOverflowMenuStyle">@style/ActionBarOverflowMenuStyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListStyle</item>

        <!-- Chips -->
        <item name="chipStyle">@style/DTChipStyle</item>

        <!-- Picker Dialogs -->
        <item name="android:datePickerDialogTheme">@style/MyDatePickerStyle</item>
        <item name="android:timePickerDialogTheme">@style/MyDatePickerStyle</item>

        <!-- Text -->
        <item name="defaultFontFamily">@style/ValueStyle</item>
        <item name="android:fontFamily">@font/oswald</item>
        <item name="titleFontFamily">@font/oswald</item>

        <!-- activity_main -->
        <item name="textSizeActionBarTitle">@dimen/text_size_xlarge</item>
        <item name="textSizeSummaryBarHeader">@dimen/text_size_sm</item>
        <item name="textSizeSummaryBarValue">@dimen/text_size_large</item>
        <item name="textSizeBottomNavActive">@dimen/text_size_med</item>
        <item name="textSizeBottomNavInactive">@dimen/text_size_sm</item>

        <!-- active dash -->
        <item name="activeDashCornerRadius">@dimen/min_touch_target</item>

        <!-- list_item -->
        <item name="listItemCardStyle">@style/DTCardViewStyle.ListItem</item>
        <item name="textSizeListItemTitle">@dimen/text_size_large</item>
        <item name="textSizeListItemSubtitle">@dimen/text_size_med</item>
        <item name="textSizeItemHeader">@dimen/text_size_sm</item>
        <item name="textSizeItemValue">@dimen/text_size_med</item>
        <item name="textSizeItemSecondaryValue">@dimen/text_size_sm</item>
        <item name="listItemCornerRadius">@dimen/margin_wide</item>
        <item name="listItemThinBorder">?attr/dimenDialogContentMarginHorizontal</item>

        <item name="dimenListItemMarginHorizontal">@dimen/margin_half</item>
        <item name="dimenListItemMarginVertical">@dimen/margin_narrow</item>

        <item name="dimenButtonElevation">0dp</item>
        <item name="dimenListItemButtonRadius">@dimen/margin_extra_wide</item>
        <item name="dimenListItemBorderWidth">1dp</item>
        <item name="dimenListItemDetailsBorderWidth">1dp</item>

        <item name="dimenDialogMargin">@dimen/margin_default</item>
        <item name="dimenDialogHeaderMarginStart">@dimen/margin_wide</item>
        <item name="dimenDialogContentMarginHorizontal">@dimen/margin_narrow</item>
        <item name="dimenDialogContentPaddingHorizontal">@dimen/margin_wide</item>
        <item name="dimenDialogContentPaddingVertical">@dimen/margin_default</item>

        <!-- insights row -->
        <item name="insightsRowCornerRadius">?attr/defaultCornerRadius</item>
        <item name="insightsRowBottomMargin">@dimen/margin_default</item>

        <!-- dialog fragment -->
        <item name="dialogFragCornerRadius">@dimen/margin_wide</item>
        <item name="dialogContentButtonStrokeWidth">0dp</item>

        <!-- Window transitions -->
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>
    </style>

    <style name="Base.DasherCompanion">
        <item name="colorUi">?attr/colorPrimary</item>
        <item name="colorUIBackground">?attr/colorOnSecondary</item>
        <item name="colorDisabled">@color/brick</item>
        <item name="colorDisabledFaded">?attr/colorSecondaryFaded</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorUi</item>

        <!-- Chips -->
        <item name="chipStrokeColorDefault">?attr/colorSecondaryVariant</item>
        <item name="chipBackgroundColorDefault">?attr/colorSecondaryFaded</item>
        <item name="chipStrokeColorDisabled">?attr/colorSecondaryFaded</item>
        <item name="chipBackgroundColorDisabled">?attr/colorSecondaryFaded</item>
        <item name="colorChipText">?attr/colorTextPrimary</item>
        <item name="colorChipCloseIcon">?attr/colorTextPrimary</item>

        <!-- Text -->
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textColorSecondary">@color/secondary_text_color</item>

        <item name="colorTextPrimary">?attr/colorOnPrimary</item>
        <item name="colorTextPrimaryDisabled">?attr/colorOnPrimaryVariant</item>
        <item name="colorTextSecondary">?attr/colorOnSecondary</item>
        <item name="colorTextSecondaryDisabled">?attr/colorOnSecondaryVariant</item>

        <item name="colorSurface">@color/secondary_text_color</item>
        <item name="colorOnSurface">@color/primary_text_color</item>

        <item name="colorTabItemRipple">?attr/colorSecondaryVariant</item>

        <!-- activity_main.xml -->
        <item name="colorActionBar">?attr/colorPrimaryVariant</item>
        <item name="colorActionBarText">?attr/colorTextPrimary</item>
        <item name="colorSummaryBar">?attr/colorTextSecondary</item>
        <item name="colorSummaryBarItemText">?attr/colorTextPrimary</item>
        <item name="colorSummaryBarHighlight">?attr/colorSecondaryFaded</item>
        <item name="colorSummaryBarHighlightStroke">?attr/colorSecondary</item>
        <item name="colorFab">?attr/colorSecondaryFaded</item>
        <item name="colorFabDisabled">?attr/colorPrimaryDark</item>
        <item name="colorFabIcon">?attr/colorAccent</item>
        <item name="colorBottomNavBar">?attr/colorUi</item>
        <item name="colorBottomNavItem">@color/bottom_nav_item_color</item>
        <item name="colorBottomNavItemText">@color/bottom_nav_text_color</item>
        <item name="colorBottomNavEnabled">?attr/colorTextPrimary</item>
        <item name="colorBottomNavTextEnabled">?attr/colorBottomNavEnabled</item>
        <item name="colorBottomNavDisabled">?attr/colorTextPrimaryDisabled</item>
        <item name="colorBottomNavTextDisabled">?attr/colorBottomNavDisabled</item>
        <item name="colorBottomNavItemIndicator">?attr/colorPrimaryFaded</item>
        <item name="colorBottomNavRipple">?attr/colorPrimaryVariant</item>
        <item name="colorPopupBackground">?attr/colorSecondaryFaded</item>
        <item name="colorDropdownRipple">?attr/colorSecondary</item>
        <item name="colorOverflowMenuText">?attr/colorOnPrimary</item>
        <item name="colorOverflowMenuButton">?attr/colorActionBarText</item>

        <!-- active_dash_bar -->
        <item name="colorActiveDashBarStroke">?attr/colorActiveDashBarBg</item>
        <item name="colorActiveDashBarBg">?attr/colorSecondary</item>
        <item name="colorActiveDashBarDetailsStroke">?attr/colorActiveDashBarBg</item>
        <item name="colorActiveDashBarDetailsBg">?attr/colorTextSecondary</item>

        <!-- fragment_income -->
        <item name="colorTabIndicator">?attr/colorSecondary</item>
        <item name="colorTabText">?attr/colorTextPrimaryDisabled</item>
        <item name="colorTabLayoutBg">?attr/colorTextSecondary</item>

        <item name="colorOptionsMenu">?attr/colorSecondaryVariant</item>
        <item name="colorOptionsMenuStroke">?attr/colorSecondary</item>
        <item name="colorOptionsButton">?attr/colorPrimary</item>
        <item name="colorOptionsMenuRipple">?attr/colorTextSecondary</item>

        <item name="colorGroupButton">?attr/colorSecondary</item>
        <item name="colorGroupButtonDisabled">?attr/colorSecondaryFaded</item>
        <item name="colorGroupStroke">?attr/colorSecondaryDark</item>

        <item name="colorGroupButtonText">@color/button_group_button_text</item>
        <item name="colorGroupButtonTextDefault">?attr/colorTextPrimaryDisabled</item>
        <item name="colorGroupButtonTextChecked">?attr/colorTextPrimary</item>

        <!-- list_item -->
        <item name="colorListItem">?attr/colorUIBackground</item>
        <item name="colorListItemBorder">?attr/colorUIBackground</item>
        <item name="colorListItemExpanded">?attr/colorPrimaryVariant</item>
        <item name="colorListItemExpandedBorder">?attr/colorPrimaryVariant</item>
        <item name="colorListItemAccent">?attr/colorPrimaryVariant</item>
        <item name="colorListItemRipple">?attr/colorPrimary</item>

        <item name="colorListItemTitle">?attr/colorTextPrimary</item>
        <item name="colorListItemSubtitle">?attr/colorTextPrimaryDisabled</item>

        <item name="colorListItemButtonBg">?attr/colorPrimaryFaded</item>
        <item name="colorListItemButtonIcon">?attr/colorPrimaryDark</item>
        <item name="colorListItemButtonOutline">?attr/colorPrimaryDark</item>

        <item name="colorListItemShadow">?attr/colorTextPrimary</item>
        <item name="textColorListItemEntryDayThisWeek">?attr/colorPrimaryDark</item>
        <item name="textColorListItemEntryDay">?attr/colorTextPrimary</item>

        <item name="dimenListItemElevationElevated">16dp</item>
        <item name="dimenListItemElevationLowered">4dp</item>

        <!-- list_item_details -->
        <item name="colorListItemDetails">?attr/colorUIBackground</item>
        <item name="colorListItemDetailsBorder">?attr/colorPrimaryVariant</item>
        <item name="colorListItemDetailsToolbar">?attr/colorOnSecondary</item>
        <item name="colorRowHeaderPayText">?attr/colorOnPrimaryVariant</item>
        <item name="colorRowValuePayText">?attr/colorTextPrimary</item>
        <item name="colorRowHeaderText">?attr/colorOnPrimaryVariant</item>
        <item name="colorRowValueText">?attr/colorOnSurface</item>
        <item name="colorRowValueSecondaryText">?attr/colorOnPrimaryVariant</item>

        <!-- charts -->
        <item name="colorChartBackground">?attr/colorListItemDetails</item>
        <item name="colorBarChartDatasetDefault">?attr/colorSecondary</item>

        <!-- CPM Chart-->
        <item name="colorSeekBarThumb">?attr/colorSecondaryDark</item>
        <item name="colorSeekBarProgress">?attr/colorSecondary</item>
        <item name="colorSeekBarProgressBg">?attr/colorSecondaryVariant</item>

        <!-- daily stats row -->
        <item name="colorChartGrossIncome">#8fc</item>
        <item name="colorChartNetIncome">#cf8</item>
        <item name="colorDailyStatsRowHeaderText">?attr/colorTextPrimary</item>
        <item name="colorDailyStatsRowValueText">?attr/colorTextPrimary</item>
        <item name="colorDailyStatsRowDayText">?attr/colorOnSurface</item>
        <item name="colorDayHeader">@color/daytime_solid</item>
        <item name="colorDayValue">@color/daytime_light</item>
        <item name="colorNightHeader">@color/nighttime_solid</item>
        <item name="colorNightValue">@color/nighttime_light</item>
        <item name="colorShowFiltersButton">?attr/colorPrimaryDark</item>
        <item name="colorShowFiltersButtonBg">?attr/colorPrimaryFaded</item>
        <item name="colorShowFiltersButtonBorder">?attr/colorPrimary</item>

        <!-- dialog fragment -->
        <item name="colorDialog">?attr/colorSecondary</item>
        <item name="colorDialogOutline">?attr/colorSecondary</item>

        <item name="colorDialogBg">?attr/colorOnSecondary</item>
        <item name="colorDialogBgOutline">?attr/colorSecondary</item>

        <item name="colorDialogTitle">?attr/colorActionBarText</item>
        <item name="colorDialogText">?attr/colorTextPrimary</item>
        <item name="textColorDialogHeader">?attr/colorAccent</item>

        <item name="colorDialogItemOutline">?attr/colorDialog</item>
        <item name="colorDialogItem">?attr/colorTextSecondary</item>
        <item name="colorDialogUneditableItem">?attr/colorSecondaryFaded</item>
        <item name="colorDialogUneditableItemOutline">?attr/colorSecondaryVariant</item>

        <item name="colorDialogButton">?attr/colorAccent</item>
        <item name="colorDialogButtonStroke">?attr/colorSecondaryDark</item>
        <item name="colorDialogButtonBg">?attr/colorSecondaryFaded</item>
        <item name="colorDialogWidget">?attr/colorTextPrimary</item>
        <item name="textColorDialogButtonDefault">?attr/colorTextPrimary</item>

        <item name="colorDialogFragSpinnerPopupBg">?attr/colorSecondaryFaded</item>

        <!-- datetime picker -->
        <item name="colorDatePickerSelected">@color/regular</item>
        <item name="colorDatePickerNavButton">@color/dark</item>
        <item name="colorDatePickerBackground">?attr/colorSurface</item>
        <item name="colorDatePickerText">?attr/colorOnSurface</item>
    </style>
</resources>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DasherCompanion" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryDark">@color/dark</item>
        <item name="colorPrimary">@color/regular</item>
        <item name="colorPrimaryVariant">@color/light</item>
        <item name="colorPrimaryFaded">@color/faded</item>
        <item name="colorOnPrimary">#454545</item>
        <item name="colorOnPrimaryVariant">#454545</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brick</item>
        <item name="colorSecondaryVariant">@color/brick_light</item>
        <item name="colorSecondaryDark">@color/brick_dark</item>
        <item name="colorSecondaryFaded">@color/brick_faded</item>
        <item name="colorOnSecondary">#FEFEFE</item>

        <item name="colorAccent">@color/accent</item>

        <item name="colorUi">?attr/colorPrimaryDark</item>
        <item name="colorDisabled">?attr/colorSecondary</item>
        <item name="colorDisabledFaded">?attr/colorSecondaryFaded</item>

        <item name="colorToolbar">?attr/colorPrimaryVariant</item>

        <item name="colorListItem">@android:color/white</item>
        <item name="colorListItemAccent">?attr/colorPrimaryFaded</item>
        <item name="colorListBackground">@color/white</item>

        <item name="colorBottomNavEnabled">@android:color/black</item>
        <item name="colorBottomNavDisabled">?attr/colorSecondaryDark</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorUi</item>

        <!-- Text -->
        <item name="android:fontFamily">@font/andika</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorPrimary">@color/primary_textcolor</item>
        <item name="android:textColorSecondary">@color/secondary_textcolor</item>

        <item name="colorDayHeader">@color/daytime_solid</item>
        <item name="colorDayValue">@color/daytime_light</item>
        <item name="colorNightHeader">@color/nighttime_solid</item>
        <item name="colorNightValue">@color/nighttime_light</item>

        <item name="colorFab">?attr/colorAccent</item>
        <item name="colorFabDisabled">?attr/colorPrimaryDark</item>
        <item name="colorFabIcon">?attr/colorOnPrimary</item>

        <item name="colorSurface">@color/secondary_textcolor</item>
        <item name="colorOnSurface">@color/primary_textcolor</item>

        <item name="cardViewStyle">@style/CardView.Tracker</item>
        <item name="actionBarStyle">@style/Abt</item>
        <item name="actionOverflowButtonStyle">@style/Base.Widget.AppCompat.ActionButton.Overflow.Tracker</item>
        <item name="actionOverflowMenuStyle">@style/Widget.AppCompat.PopupMenu.Overflow.Tracker</item>
    </style>
</resources>
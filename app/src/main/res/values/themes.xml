<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DasherCompanion" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brick</item>
        <item name="colorPrimaryVariant">@color/brick_light</item>
        <item name="colorPrimaryDark">@color/brick_dark</item>
        <item name="colorPrimaryFaded">@color/brick_faded</item>
        <item name="colorOnPrimary">#343434</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/freddy_iz_fine_faded</item>
        <item name="colorSecondaryVariant">@color/freddy_iz_fine</item>
        <item name="colorOnSecondary">#FEFEFE</item>

        <item name="colorAccent">@color/malamute</item>

        <item name="colorDisabled">@color/shadow</item>
        <item name="colorDisabledFaded">@color/shadow_faded</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="colorDayHeader">@color/daytime_solid</item>
        <item name="colorDayValue">@color/daytime_light</item>
        <item name="colorNightHeader">@color/nighttime_solid</item>
        <item name="colorNightValue">@color/nighttime_light</item>

        <item name="android:fontFamily">@font/oswald</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorPrimary">@color/primary_textcolor</item>
        <item name="colorSurface">@color/primary_textcolor</item>
        <item name="android:textColorSecondary">@color/secondary_textcolor</item>
        <item name="cardElevation">0dp</item>
        <item name="cardViewStyle">@style/CardView.Yojimbo</item>
        <item name="appBarLayoutStyle">@style/Widget.Design.AppBarLayout.Yojimbo</item>
    </style>
</resources>
<resources>

    <style name="DialogFragmentWrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingHorizontal">@dimen/margin_default</item>
    </style>

    <style name="DialogFragCard" parent="DTCardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">?attr/dialogFragCornerRadius</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="DialogFragLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_dialog</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="DialogFragLayout.Confirmation">
        <item name="android:paddingBottom">@dimen/margin_narrow</item>
    </style>

    <style name="DialogToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="titleMarginStart">24dp</item>
        <item name="titleTextAppearance">@style/DTActionBarTitleTextAppearance</item>
    </style>

    <style name="DialogContentCard" parent="DTCardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_half</item>
        <item name="cardCornerRadius">?attr/dialogFragCornerRadius</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="DialogContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingVertical">@dimen/margin_default</item>
        <item name="android:paddingHorizontal">@dimen/margin_wide</item>
        <item name="android:background">@drawable/bg_dialog_content</item>
    </style>

    <style name="DialogContent.Confirmation">
        <item name="android:padding">0dp</item>
    </style>

    <style name="DialogContentGroup">
        <item name="android:background">@drawable/bg_grouping_card</item>
    </style>

    <style name="DialogFragSpinnerStyle">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/margin_narrow</item>
        <item name="android:layout_marginBottom">@dimen/margin_narrow</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:showDividers">middle</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">?attr/colorDialogText</item>
        <item name="android:popupBackground">@drawable/bg_dialog_frag_spinner_popup</item>
        <item name="android:dropDownSelector">@drawable/ripple_drop_down_selector</item>
    </style>

    <style name="DropDownListStyle" parent="Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/ripple_drop_down_selector</item>
    </style>
</resources>
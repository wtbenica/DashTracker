<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialogToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleMarginStart">24dp</item>
        <item name="titleTextAppearance">@style/TitleTextAppearance</item>
    </style>

    <style name="DialogContentCard" parent="CardViewStyle">
        <item name="android:layout_marginHorizontal">@dimen/margin_half</item>
        <item name="cardCornerRadius">?attr/dialogFragCornerRadius</item>
    </style>

    <style name="DialogContent">
        <item name="android:paddingVertical">@dimen/margin_default</item>
        <item name="android:paddingHorizontal">@dimen/margin_wide</item>
        <item name="android:background">?attr/colorDialogContentBg</item>
    </style>
</resources>
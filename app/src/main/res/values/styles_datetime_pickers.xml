<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- Title bar background -->
        <item name="colorAccent">@color/dark</item>

        <!-- Title bar text -->
        <item name="android:headerMonthTextAppearance">@style/PickerTitleTextAppearance</item>

        <!-- background -->
        <item name="android:windowBackground">@color/on_brick</item>
        <item name="android:timePickerStyle">@style/MyTimePicker</item>

        <!-- arrow background -->
        <item name="android:selectableItemBackgroundBorderless">@android:color/transparent</item>

        <!-- selector -->
        <item name="colorControlActivated">@color/dark</item>

        <!-- selected year highlight -->
        <item name="colorControlHighlight">@color/light</item>

        <!-- calendar text -->
        <item name="android:textColorPrimary">@color/on_regular_light</item>

        <!-- days of week -->
        <item name="android:textColorSecondary">@color/dark</item>

        <!-- selected date -->
        <item name="android:textColorPrimaryInverse">@color/on_regular</item>

        <!-- button text -->
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="PickerTitleTextAppearance" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/on_brick</item>
    </style>

    <style name="MyTimePicker" parent="Widget.MaterialComponents.TimePicker">
        <item name="android:headerBackground">@color/dark</item>
        <item name="android:headerTimeTextAppearance">@style/PickerTitleTextAppearance</item>
        <item name="android:headerAmPmTextAppearance">@style/PickerTitleTextAppearance</item>
        <item name="android:numbersBackgroundColor">@color/faded</item>
        <item name="android:numbersSelectorColor">@color/regular</item>
        <item name="android:numbersTextColor">@color/on_regular_light</item>
        <item name="android:timePickerMode">clock</item>
    </style>
</resources>
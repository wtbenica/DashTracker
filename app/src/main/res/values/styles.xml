<resources>
    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">?attr/defaultCornerRadius</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="TitleTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">?attr/textSizeActionBarTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">?attr/titleFontFamily</item>
        <item name="android:textColor">?attr/colorActionBarText</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/TitleTextAppearance</item>
        <item name="background">?android:attr/statusBarColor</item>
    </style>

    <style name="ThisText" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/lalezar</item>
    </style>

    <style name="ChipStyle" parent="Widget.Material3.Chip.Assist">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textAppearance">@style/ThisText</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipBackgroundColor">@color/chip_surface</item>
        <item name="closeIconVisible">true</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="closeIconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="ShapeAppearanceBottomSheet" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerSizeTopLeft">@dimen/margin_wide</item>
        <item name="cornerSizeTopRight">@dimen/margin_wide</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>
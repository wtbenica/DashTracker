<resources>
    <style name="DTCardViewStyle" parent="CardView">
        <item name="cardCornerRadius">?attr/defaultCornerRadius</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="DTActionBarTitleTextAppearance" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">?attr/textSizeActionBarTitle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">?attr/titleFontFamily</item>
        <item name="android:textColor">?attr/colorActionBarText</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="DTActionBarStyle" parent="Widget.Material3.ActionBar.Solid">
        <item name="titleTextStyle">@style/DTActionBarTitleTextAppearance</item>
        <item name="background">?android:attr/statusBarColor</item>
        <item name="android:hideOnContentScroll">true</item>
    </style>

    <style name="DTChipTextAppearance" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/oswald</item>
    </style>

    <style name="DTChipStyle" parent="Widget.Material3.Chip.Assist">
        <item name="android:textColor">?attr/colorChipText</item>
        <item name="android:textAppearance">@style/DTChipTextAppearance</item>
        <item name="chipCornerRadius">@dimen/min_touch_target</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipBackgroundColor">@color/chip_surface</item>
        <item name="closeIconVisible">true</item>
        <item name="chipStrokeWidth">2dp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="closeIconTint">?attr/colorChipCloseIcon</item>
    </style>

    <style name="DTAlertDialogStyle" parent="ThemeOverlay.Material3.Dialog.Alert">
        <item name="android:dialogCornerRadius">?attr/dialogCornerRadius</item>
        <item name="android:windowBackground">@drawable/bg_alert_dialog</item>
        <item name="android:background">@drawable/bg_alert_dialog_bg</item>
    </style>
</resources>
<resources>

    <style name="DialogHeaderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">?attr/textSizeItemHeader</item>
        <item name="android:textColor">?attr/colorDialogText</item>
    </style>

    <style name="DialogHeaderTextView.SideLabel" parent="Widget.AppCompat.TextView">
        <item name="android:layout_columnWeight">0.3</item>
    </style>
    <style name="DialogValueTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">@dimen/min_touch_target</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/margin_narrow</item>
        <item name="android:layout_marginBottom">@dimen/margin_narrow</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textSize">?attr/textSizeItemValue</item>
        <item name="android:textColor">?attr/colorDialogText</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_columnWeight">0.7</item>
    </style>

    <style name="DialogImageButton">
        <item name="android:layout_marginHorizontal">@dimen/margin_narrow</item>
        <item name="android:layout_marginVertical">@dimen/margin_half</item>
        <item name="android:background">@drawable/bg_dialog_button</item>
        <item name="android:layout_height">@dimen/min_touch_target</item>
        <item name="android:layout_width">@dimen/min_touch_target</item>
        <item name="android:tint">?attr/colorDialogButton</item>
    </style>

    <style name="DialogDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorSecondaryDark</item>
        <item name="android:layout_marginEnd">@dimen/margin_extra_wide</item>
        <item name="android:layout_marginStart">@dimen/margin_extra_wide</item>
    </style>
</resources>
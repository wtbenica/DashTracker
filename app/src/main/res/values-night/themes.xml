<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.DasherCompanion">
        <item name="colorUi">?attr/colorPrimaryDark</item>
        <item name="colorUIBackground">?attr/colorOnPrimary</item>
        <item name="colorDisabled">@color/brick</item>
        <item name="colorDisabledFaded">?attr/colorSecondaryFaded</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorUi</item>

        <!-- Text -->
        <item name="android:fontFamily">@font/andika</item>
        <item name="android:textColor">?attr/colorTextSecondary</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textColorSecondary">@color/secondary_text_color</item>

        <item name="colorTextPrimary">?attr/colorOnPrimary</item>
        <item name="colorTextPrimaryDisabled">?attr/colorSecondary</item>
        <item name="colorTextSecondary">?attr/colorOnSecondary</item>
        <item name="colorTextSecondaryDisabled">?attr/colorSecondaryFaded</item>

        <item name="colorSurface">?attr/colorSecondary</item>
        <item name="colorOnSurface">?attr/colorOnSecondary</item>

        <!-- activity_main.xml -->
        <item name="colorActionBarText">@color/secondary_text_color</item>
        <item name="colorToolbar">?attr/colorPrimary</item>
        <item name="colorSummaryBarItemText">?attr/colorTextSecondary</item>
        <item name="colorFab">?attr/colorAccent</item>
        <item name="colorFabDisabled">?attr/colorSecondaryDark</item>
        <item name="colorFabIcon">?attr/colorOnSecondary</item>
        <item name="colorBottomNavItem">@color/bottom_nav_text_color</item>
        <item name="colorBottomNavEnabled">?attr/colorOnSecondary</item>
        <item name="colorBottomNavDisabled">?attr/colorPrimaryFaded</item>
        <item name="colorOverflowMenu">?attr/colorSecondaryDark</item>
        <item name="colorOverflowMenuText">?attr/colorOnSecondary</item>

        <!-- list_item -->
        <item name="colorListItem">?attr/colorSecondary</item>
        <item name="colorListItemExpanded">?attr/colorPrimaryVariant</item>
        <item name="colorListItemAccent">?attr/colorPrimary</item>
        <item name="colorListItemTitle">?attr/colorTextSecondary</item>
        <item name="colorListItemSubtitle">?attr/colorTextSecondary</item>

        <!-- list_item_details -->
        <item name="colorListItemDetails">?attr/colorListItem</item>
        <item name="colorListItemDetailsToolbar">?attr/colorListItemAccent</item>
        <item name="colorRowHeaderPayText">?attr/colorTextSecondary</item>
        <item name="colorRowValuePayText">?attr/colorTextSecondary</item>
        <item name="colorRowHeaderText">?attr/colorOnSurface</item>
        <item name="colorRowValueText">?attr/colorOnSurface</item>
        <item name="colorRowValueSecondaryText">?attr/colorOnSurface</item>

        <!-- daily stats row -->
        <item name="colorDailyStatsRowHeaderText">?attr/colorTextPrimary</item>
        <item name="colorDailyStatsRowValueText">?attr/colorTextPrimary</item>
        <item name="colorDailyStatsRowDayText">?attr/colorOnSurface</item>
        <item name="colorDayHeader">@color/daytime_solid</item>
        <item name="colorDayValue">@color/daytime_light</item>
        <item name="colorNightHeader">@color/nighttime_solid</item>
        <item name="colorNightValue">@color/nighttime_light</item>

        <!-- dialog fragment -->
        <item name="colorDialog">?attr/colorPrimary</item>
        <item name="colorDialogTitle">?attr/colorOnSecondary</item>
        <item name="colorDialogText">?attr/colorOnSurface</item>
        <item name="colorDialogItemOutline">?attr/colorSecondaryFaded</item>
        <item name="colorDialogContentBg">?attr/colorSecondary</item>
        <item name="colorDialogItem">?attr/colorSecondaryVariant</item>
        <item name="colorDialogItemDisabled">?attr/colorSecondaryDark</item>
    </style>
</resources>
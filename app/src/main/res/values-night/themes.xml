<resources>
    <!-- Splash screen theme -->
    <style name="SplashScreen" parent="SplashScreenBase">
        <item name="colorOnSecondary">@color/on_brick</item>
    </style>

    <!-- Licenses Activities Theme -->
    <style name="LicensesActivitiesTheme" parent="LicensesActivitiesBase">
        <item name="android:windowLightStatusBar">false</item>
        <item name="colorActionBarText">@color/on_brick</item>
    </style>

    <style name="Base.DasherCompanion">
        <item name="colorUi">?attr/colorPrimaryDark</item>
        <item name="colorUIBackground">?attr/colorOnSecondary</item>
        <item name="colorDisabled">@color/brick</item>
        <item name="colorDisabledFaded">?attr/colorSecondaryFaded</item>

        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">?attr/colorUi</item>

        <!-- Text -->
        <item name="android:textColor">?attr/colorTextPrimary</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textColorSecondary">@color/secondary_text_color</item>

        <item name="colorTextPrimary">?attr/colorOnPrimary</item>
        <item name="colorTextPrimaryDisabled">?attr/colorOnPrimaryVariant</item>
        <item name="colorTextSecondary">?attr/colorOnSecondary</item>
        <item name="colorTextSecondaryDisabled">?attr/colorOnSecondaryVariant</item>

        <item name="colorSurface">?attr/colorSecondary</item>
        <item name="colorOnSurface">?attr/colorOnPrimary</item>

        <item name="colorTabItemRipple">?attr/colorTabIndicator</item>

        <!-- activity_main.xml -->
        <item name="colorActionBarText">?attr/colorTextPrimary</item>
        <item name="colorSummaryBar">?attr/colorUIBackground</item>
        <item name="colorSummaryBarItemText">?attr/colorTextPrimary</item>
        <item name="colorFab">?attr/colorSecondary</item>
        <item name="colorFabDisabled">?attr/colorPrimary</item>
        <item name="colorFabIcon">?attr/colorAccent</item>
        <item name="colorBottomNavBar">?attr/colorUi</item>
        <item name="colorBottomNavItem">@color/bottom_nav_item_color</item>
        <item name="colorBottomNavItemText">@color/bottom_nav_text_color</item>
        <item name="colorBottomNavEnabled">?attr/colorAccent</item>
        <item name="colorBottomNavTextEnabled">?attr/colorAccent</item>
        <item name="colorBottomNavDisabled">?attr/colorPrimaryFaded</item>
        <item name="colorBottomNavTextDisabled">?attr/colorPrimaryFaded</item>
        <item name="colorBottomNavItemIndicator">?attr/colorSecondaryDark</item>
        <item name="colorBottomNavRipple">?attr/colorSecondaryVariant</item>
        <item name="colorPopupBackground">?attr/colorSecondaryVariant</item>
        <item name="colorOverflowMenuText">?attr/colorOnSecondary</item>
        <item name="colorOverflowMenuButton">?attr/colorActionBarText</item>

        <!-- active_dash_bar -->
        <item name="colorActiveDashBarStroke">?attr/colorPrimary</item>
        <item name="colorActiveDashBarBg">?attr/colorPrimary</item>
        <item name="colorActiveDashBarDetailsStroke">?attr/colorPrimary</item>
        <item name="colorActiveDashBarDetailsBg">?attr/colorPrimaryVariant</item>

        <!-- fragment_income -->
        <item name="colorTabIndicator">?attr/colorSecondaryFaded</item>
        <item name="colorTabText">?attr/colorTextPrimary</item>
        <item name="colorGroupButton">?attr/colorSecondary</item>
        <item name="colorGroupButtonDisabled">?attr/colorSecondaryVariant</item>
        <item name="colorGroupButtonText">@color/button_group_button_text</item>
        <item name="colorGroupButtonTextDefault">?attr/colorTextPrimary</item>
        <item name="colorGroupButtonTextChecked">?attr/colorTextPrimary</item>
        <item name="colorGroupStroke">?attr/colorSecondaryDark</item>
        <item name="colorOptionsMenu">?attr/colorSecondaryDark</item>
        <item name="colorTabLayoutBg">?attr/colorUIBackground</item>
        <item name="colorOptionsButton">?attr/colorTabIndicator</item>
        <item name="colorOptionsMenuStroke">?attr/colorSecondaryVariant</item>

        <!-- list_item -->
        <item name="colorListItem">?attr/colorUIBackground</item>
        <item name="colorListItemExpanded">?attr/colorPrimaryDark</item>
        <item name="colorListItemExpandedBorder">?attr/colorPrimary</item>
        <item name="colorListItemAccent">?attr/colorPrimaryVariant</item>
        <item name="colorListItemTitle">?attr/colorTextPrimary</item>
        <item name="colorListItemSubtitle">?attr/colorTextPrimary</item>
        <item name="colorListItemButtonBg">@android:color/transparent</item>
        <item name="colorListItemButtonIcon">?attr/colorPrimaryFaded</item>

        <!-- list_item_details -->
        <item name="colorListItemDetails">?attr/colorListItem</item>
        <item name="colorListItemDetailsToolbar">?attr/colorListItemAccent</item>
        <item name="colorRowHeaderPayText">?attr/colorOnPrimaryVariant</item>
        <item name="colorRowValuePayText">?attr/colorTextPrimary</item>
        <item name="colorRowHeaderText">?attr/colorOnPrimaryVariant</item>
        <item name="colorRowValueText">?attr/colorTextPrimary</item>
        <item name="colorRowValueSecondaryText">?attr/colorTextPrimary</item>

        <!-- charts -->
        <item name="colorChartBackground">?attr/colorListItem</item>
        <item name="colorBarChartDatasetDefault">?attr/colorSecondary</item>

        <!-- CPM Chart-->
        <item name="colorSeekBarThumb">?attr/colorAccent</item>
        <item name="colorSeekBarProgress">?attr/colorAccent</item>
        <item name="colorSeekBarProgressBg">?attr/colorSecondaryDark</item>

        <!-- daily stats row -->
        <item name="colorChartGrossIncome">#848</item>
        <item name="colorChartNetIncome">#488</item>
        <item name="colorDailyStatsRowHeaderText">?attr/colorTextSecondary</item>
        <item name="colorDailyStatsRowValueText">?attr/colorTextSecondary</item>
        <item name="colorDailyStatsRowDayText">?attr/colorOnSurface</item>
        <item name="colorDayHeader">@color/daytime_solid</item>
        <item name="colorDayValue">@color/daytime_light</item>
        <item name="colorNightHeader">@color/nighttime_solid</item>
        <item name="colorNightValue">@color/nighttime_light</item>
        <item name="colorShowFiltersButton">?attr/colorAccent</item>
        <item name="colorShowFiltersButtonBg">?attr/colorSecondaryVariant</item>

        <!-- dialog fragment -->
        <item name="colorDialog">?attr/colorPrimary</item>
        <item name="colorDialogSecondary">?attr/colorPrimary</item>
        <item name="colorDialogBg">?attr/colorOnSecondary</item>
        <item name="colorDialogTitle">?attr/colorOnSecondary</item>
        <item name="colorDialogText">?attr/colorOnSurface</item>
        <item name="colorDialogItemOutline">?attr/colorPrimaryVariant</item>
        <item name="colorDialogGroupBg">?attr/colorOnSecondary</item>
        <item name="colorDialogGroupStroke">?attr/colorPrimaryVariant</item>
        <item name="colorDialogContentBg">@drawable/bg_dialog_fragment</item>
        <item name="colorDialogItem">?attr/colorOnSecondaryVariant</item>
        <item name="colorDialogUneditableItem">?attr/colorPrimary</item>
        <item name="colorDialogItemDisabled">?attr/colorPrimaryDark</item>
        <item name="colorDialogButtonIcon">?attr/colorPrimaryFaded</item>
        <item name="colorDialogButtonBg">?attr/colorSecondaryVariant</item>

        <!-- datetime picker -->
        <item name="colorDatePickerSelected">@color/regular</item>
        <item name="colorDatePickerNavButton">@color/dark</item>
        <item name="colorDatePickerBackground">?attr/colorSurface</item>
        <item name="colorDatePickerText">?attr/colorOnSurface</item>
    </style>
</resources>
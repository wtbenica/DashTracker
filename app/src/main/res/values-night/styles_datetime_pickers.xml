<resources>

    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- Calender Number color arrow color (< >) -->
        <item name="android:textColorPrimary">@color/on_brick</item>

        <!-- calendar days of week -->
        <item name="android:textColorSecondary">@color/faded</item>

        <!--title bar day , month / selected day-->
        <item name="android:textColorPrimaryInverse">@color/on_brick</item>

        <!-- Title bar year -->
        <item name="android:textColorSecondaryInverse">@color/faded</item>

        <!-- Title bar background -->
        <item name="colorAccent">@color/dark</item>

        <!-- selector -->
        <item name="colorControlActivated">@color/regular</item>

        <!-- selected year highlight -->
        <item name="colorControlHighlight">@color/faded</item>

        <!-- background -->
        <item name="android:windowBackground">@color/brick_dark</item>
        <item name="android:timePickerStyle">@style/MyTimePicker</item>

        <!-- arrow background -->
        <item name="android:selectableItemBackgroundBorderless">@android:color/transparent</item>

        <item name="android:buttonBarPositiveButtonStyle">
            @style/MyDatePickerButtonStyle
        </item>

        <item name="android:buttonBarNegativeButtonStyle">
            @style/MyDatePickerButtonStyle
        </item>
    </style>

    <style name="MyDatePickerButtonStyle">
        <item name="android:textColor">@color/faded</item>\
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!-- This isn't needed for the date picker, but is required for time picker.
    you might think you want to delete it, but you don't -->
    <style name="PickerTitleTextAppearance" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/on_brick</item>
    </style>

    <style name="MyTimePicker" parent="Widget.MaterialComponents.TimePicker">
        <item name="android:headerBackground">@color/dark</item>
        <item name="android:headerTimeTextAppearance">@style/PickerTitleTextAppearance</item>
        <item name="android:headerAmPmTextAppearance">@style/PickerTitleTextAppearance</item>
        <item name="android:numbersBackgroundColor">@color/brick</item>
        <item name="android:numbersSelectorColor">@color/light</item>
        <item name="android:numbersTextColor">@color/on_brick</item>
        <item name="android:timePickerMode">clock</item>
    </style>
</resources>